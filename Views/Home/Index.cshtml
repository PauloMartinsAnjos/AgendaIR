@{
    ViewData["Title"] = "AgendaIR - Sistema de Agendamento";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-body text-center p-5">
                    <i class="bi bi-calendar-check text-primary" style="font-size: 5rem;"></i>
                    <h1 class="display-4 mt-4 mb-3">AgendaIR</h1>
                    <p class="lead text-muted">
                        Sistema de Agendamento de Declaração de Imposto de Renda
                    </p>

                    <hr class="my-4" />

                    <div class="row mt-5">
                        <div class="col-md-6 mb-4">
                            <div class="card h-100 border-primary">
                                <div class="card-body">
                                    <i class="bi bi-people-fill text-primary" style="font-size: 3rem;"></i>
                                    <h5 class="card-title mt-3">Funcionários</h5>
                                    <p class="card-text">
                                        Acesso para funcionários e administradores
                                    </p>
                                    <a href="@Url.Action("Login", "Auth")" class="btn btn-primary">
                                        <i class="bi bi-box-arrow-in-right"></i> Fazer Login
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-4">
                            <div class="card h-100 border-success">
                                <div class="card-body">
                                    <i class="bi bi-person-check-fill text-success" style="font-size: 3rem;"></i>
                                    <h5 class="card-title mt-3">Clientes</h5>
                                    <p class="card-text">
                                        Acesse usando o link mágico enviado por WhatsApp
                                    </p>
                                    <button class="btn btn-success" disabled>
                                        <i class="bi bi-whatsapp"></i> Link via WhatsApp
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <small class="text-muted">
                            <i class="bi bi-info-circle"></i> 
                            Clientes devem usar o link único recebido via WhatsApp para acessar o sistema
                        </small>
                    </div>
                </div>
            </div>

            <div class="card mt-4 shadow">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-star-fill text-warning"></i> Funcionalidades
                    </h5>
                    <div class="row mt-3">
                        <div class="col-md-4 text-center mb-3">
                            <i class="bi bi-calendar3 text-primary" style="font-size: 2rem;"></i>
                            <p class="mt-2 mb-0"><strong>Agendamento Fácil</strong></p>
                            <small class="text-muted">Agende seu atendimento em poucos cliques</small>
                        </div>
                        <div class="col-md-4 text-center mb-3">
                            <i class="bi bi-file-earmark-arrow-up text-success" style="font-size: 2rem;"></i>
                            <p class="mt-2 mb-0"><strong>Upload de Documentos</strong></p>
                            <small class="text-muted">Envie seus documentos de forma segura</small>
                        </div>
                        <div class="col-md-4 text-center mb-3">
                            <i class="bi bi-google text-danger" style="font-size: 2rem;"></i>
                            <p class="mt-2 mb-0"><strong>Google Calendar</strong></p>
                            <small class="text-muted">Integrado com Google Calendar</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

