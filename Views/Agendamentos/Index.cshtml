@model AgendaIR.Models.ViewModels.AgendamentoIndexViewModel

@{
    ViewData["Title"] = "Agendamentos";
    var isAdmin = Context.Session.GetString("IsAdmin") == "True";
}

<!-- PAGE HEADER -->
<div class="page-header-rir">
    <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
        <div>
            <h2><i class="bi bi-calendar-check"></i> Agendamentos</h2>
            <p>Gerencie os agendamentos do sistema</p>
        </div>
        <a asp-action="CreateAgendamento" class="btn-rir-primary">
            <i class="bi bi-plus-circle"></i> Novo Agendamento
        </a>
    </div>
</div>

<!-- MENSAGENS -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert-rir alert-rir-success">
        <i class="bi bi-check-circle-fill" style="font-size: 1.5rem;"></i>
        <div>
            <strong>Sucesso!</strong><br />
            @TempData["SuccessMessage"]
        </div>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert-rir alert-rir-danger">
        <i class="bi bi-exclamation-triangle-fill" style="font-size: 1.5rem;"></i>
        <div>
            <strong>Erro!</strong><br />
            @TempData["ErrorMessage"]
        </div>
    </div>
}

<!-- FILTROS -->
<div class="card-rir mb-4">
    <div class="card-rir-header">
        <h5 class="mb-0"><i class="bi bi-funnel"></i> Filtros</h5>
    </div>
    <div class="card-rir-body">
            <form asp-action="Index" method="get">
                <div class="row g-3">
                    <!-- Filtro Status -->
                    <div class="col-md-3">
                        <label asp-for="FiltroStatus" class="form-label">Status</label>
                        <select asp-for="FiltroStatus" class="form-select">
                            <option value="">Todos</option>
                            @foreach (var status in Model.StatusList)
                            {
                                <option value="@status">@status</option>
                            }
                        </select>
                    </div>

                    <!-- Filtro Data Início -->
                    <div class="col-md-3">
                        <label asp-for="FiltroDataInicio" class="form-label">Data Início</label>
                        <input asp-for="FiltroDataInicio" class="form-control" type="date" />
                    </div>

                    <!-- Filtro Data Fim -->
                    <div class="col-md-3">
                        <label asp-for="FiltroDataFim" class="form-label">Data Fim</label>
                        <input asp-for="FiltroDataFim" class="form-control" type="date" />
                    </div>

                    <!-- Filtro Funcionário (apenas para Admin) -->
                    @if (isAdmin && Model.Funcionarios != null)
                    {
                        <div class="col-md-3">
                            <label asp-for="FiltroFuncionarioId" class="form-label">Funcionário</label>
                            <select asp-for="FiltroFuncionarioId" class="form-select">
                                <option value="">Todos</option>
                                @foreach (var func in Model.Funcionarios)
                                {
                                    <option value="@func.Id">@func.Nome</option>
                                }
                            </select>
                        </div>
                    }
                </div>

                <div class="row mt-3">
                    <div class="col-md-12">
                        <div class="d-flex flex-column flex-md-row gap-2">
                            <button type="submit" class="btn-rir-primary">
                                <i class="bi bi-search"></i> Filtrar
                            </button>
                            <a asp-action="Index" class="btn-rir-secondary">
                                <i class="bi bi-x-circle"></i> Limpar Filtros
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- TABELA DE AGENDAMENTOS -->
    <div class="card-rir">
        <div class="card-rir-body">
            @if (!Model.Agendamentos.Any())
            {
                <div class="alert-rir alert-rir-info">
                    <i class="bi bi-info-circle"></i>
                    <div>
                        <strong>Nenhum agendamento encontrado</strong><br />
                        Clique em "Novo Agendamento" para criar o primeiro.
                    </div>
                </div>
            }
            else
            {
                <!-- ✅ TABELA DESKTOP -->
                <div class="table-responsive desktop-only">
                    <table class="table-rir">
                        <thead>
                            <tr>
                                <th>Cliente</th>
                                <th>Tipo</th>
                                <th>Data/Hora</th>
                                <th>Status</th>
                                <th>Responsável</th>
                                <th class="text-end">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Agendamentos)
                            {
                                <tr>
                                    <td>
                                        <strong>@item.ClienteNome</strong><br />
                                        <small class="text-muted">CPF: @(item.ClienteCPF ?? "N/A")</small>
                                    </td>
                                    <td>
                                        <span class="badge-rir badge-rir-info">
                                            @(item.TipoAgendamentoNome ?? "Não especificado")
                                        </span>
                                    </td>
                                    <td>
                                        <i class="bi bi-calendar"></i> @item.DataHora.ToString("dd/MM/yyyy")<br />
                                        <small class="text-muted"><i class="bi bi-clock"></i> @item.DataHora.ToString("HH:mm")</small>
                                    </td>
                                    <td>
                                        @switch (item.Status.ToLower())
                                        {
                                            case "pendente":
                                                <span class="badge-rir badge-rir-warning">Pendente</span>
                                                break;
                                            case "confirmado":
                                                <span class="badge-rir badge-rir-success">Confirmado</span>
                                                break;
                                            case "concluído":
                                            case "concluido":
                                                <span class="badge-rir badge-rir-primary">Concluído</span>
                                                break;
                                            case "cancelado":
                                                <span class="badge-rir badge-rir-danger">Cancelado</span>
                                                break;
                                            default:
                                                <span class="badge-rir badge-rir-secondary">@item.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <small>@item.FuncionarioNome</small>
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-rir-secondary" 
                                               title="Ver detalhes">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-rir-primary" 
                                               title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-rir-danger" 
                                               title="Excluir">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- ✅ CARDS MOBILE -->
                <div class="mobile-only">
                    @foreach (var item in Model.Agendamentos)
                    {
                        <div class="client-card-mobile">
                            <div class="client-card-header">
                                <div class="client-card-name">
                                    <i class="bi bi-calendar-event"></i>
                                    <strong>@item.ClienteNome</strong>
                                </div>
                                <div>
                                    @switch (item.Status.ToLower())
                                    {
                                        case "pendente":
                                            <span class="badge-rir badge-rir-warning">Pendente</span>
                                            break;
                                        case "confirmado":
                                            <span class="badge-rir badge-rir-success">Confirmado</span>
                                            break;
                                        case "concluído":
                                        case "concluido":
                                            <span class="badge-rir badge-rir-primary">Concluído</span>
                                            break;
                                        case "cancelado":
                                            <span class="badge-rir badge-rir-danger">Cancelado</span>
                                            break;
                                        default:
                                            <span class="badge-rir badge-rir-secondary">@item.Status</span>
                                            break;
                                    }
                                </div>
                            </div>

                            <div class="client-card-body">
                                <div class="client-info-row">
                                    <i class="bi bi-calendar"></i>
                                    <span><strong>@item.DataHora.ToString("dd/MM/yyyy")</strong> às <strong>@item.DataHora.ToString("HH:mm")</strong></span>
                                </div>
                                <div class="client-info-row">
                                    <i class="bi bi-person-badge"></i>
                                    <span>@item.FuncionarioNome</span>
                                </div>
                                <div class="client-info-row">
                                    <i class="bi bi-tag"></i>
                                    <span class="badge-rir badge-rir-info">
                                        @(item.TipoAgendamentoNome ?? "Não especificado")
                                    </span>
                                </div>
                            </div>

                            <div class="client-card-actions">
                                <a asp-action="Details" asp-route-id="@item.Id" 
                                   class="btn btn-sm btn-rir-secondary">
                                    <i class="bi bi-eye"></i> Ver
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" 
                                   class="btn btn-sm btn-rir-primary">
                                    <i class="bi bi-pencil"></i> Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" 
                                   class="btn btn-sm btn-rir-danger">
                                    <i class="bi bi-trash"></i> Excluir
                                </a>
                            </div>
                        </div>
                    }
                </div>

                <div class="mt-3">
                    <p class="text-muted">
                        <i class="bi bi-info-circle"></i> 
                        Mostrando <strong>@Model.Agendamentos.Count</strong> agendamento(s)
                    </p>
                </div>
            }
        </div>
    </div>

@section Scripts {
    <script>
        // Auto-dismiss alerts após 5 segundos
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
