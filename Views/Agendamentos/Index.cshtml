@model AgendaIR.Models.ViewModels.AgendamentoIndexViewModel

@{
    ViewData["Title"] = "Agendamentos";
    var isAdmin = Context.Session.GetString("IsAdmin") == "True";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2>
                <i class="bi bi-calendar-check"></i> 
                @(isAdmin ? "Todos os Agendamentos" : "Meus Agendamentos")
            </h2>
            <p class="text-muted">
                @(isAdmin ? "Visualize e gerencie todos os agendamentos do sistema" : "Visualize e gerencie seus agendamentos")
            </p>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filtros -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-funnel"></i> Filtros</h5>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row g-3">
                    <!-- Filtro Status -->
                    <div class="col-md-3">
                        <label asp-for="FiltroStatus" class="form-label">Status</label>
                        <select asp-for="FiltroStatus" class="form-select">
                            <option value="">Todos</option>
                            @foreach (var status in Model.StatusList)
                            {
                                <option value="@status">@status</option>
                            }
                        </select>
                    </div>

                    <!-- Filtro Data Início -->
                    <div class="col-md-3">
                        <label asp-for="FiltroDataInicio" class="form-label">Data Início</label>
                        <input asp-for="FiltroDataInicio" class="form-control" type="date" />
                    </div>

                    <!-- Filtro Data Fim -->
                    <div class="col-md-3">
                        <label asp-for="FiltroDataFim" class="form-label">Data Fim</label>
                        <input asp-for="FiltroDataFim" class="form-control" type="date" />
                    </div>

                    <!-- Filtro Funcionário (apenas para Admin) -->
                    @if (isAdmin && Model.Funcionarios != null)
                    {
                        <div class="col-md-3">
                            <label asp-for="FiltroFuncionarioId" class="form-label">Funcionário</label>
                            <select asp-for="FiltroFuncionarioId" class="form-select">
                                <option value="">Todos</option>
                                @foreach (var func in Model.Funcionarios)
                                {
                                    <option value="@func.Id">@func.Nome</option>
                                }
                            </select>
                        </div>
                    }
                </div>

                <div class="row mt-3">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i> Filtrar
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Limpar Filtros
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Lista de Agendamentos -->
    @if (Model.Agendamentos.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Data/Hora</th>
                                <th>Status</th>
                                <th>Cliente</th>
                                <th>E-mail</th>
                                @if (isAdmin)
                                {
                                    <th>Funcionário</th>
                                }
                                <th>Documentos</th>
                                <th>Criado em</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var agendamento in Model.Agendamentos)
                            {
                                <tr>
                                    <td>
                                        <strong>@agendamento.DataHora.ToString("dd/MM/yyyy")</strong><br>
                                        <small class="text-muted">@agendamento.DataHora.ToString("HH:mm")</small>
                                    </td>
                                    <td>
                                        @if (agendamento.Status == "Pendente")
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-clock"></i> Pendente
                                            </span>
                                        }
                                        else if (agendamento.Status == "Confirmado")
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Confirmado
                                            </span>
                                        }
                                        else if (agendamento.Status == "Concluido")
                                        {
                                            <span class="badge bg-primary">
                                                <i class="bi bi-check-all"></i> Concluído
                                            </span>
                                        }
                                        else if (agendamento.Status == "Cancelado")
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-x-circle"></i> Cancelado
                                            </span>
                                        }
                                    </td>
                                    <td>@agendamento.ClienteNome</td>
                                    <td><small>@agendamento.ClienteEmail</small></td>
                                    @if (isAdmin)
                                    {
                                        <td>@agendamento.FuncionarioNome</td>
                                    }
                                    <td>
                                        <span class="badge bg-info">
                                            <i class="bi bi-file-earmark"></i> @agendamento.TotalDocumentos
                                        </span>
                                    </td>
                                    <td>
                                        <small>@agendamento.DataCriacao.ToString("dd/MM/yyyy")</small>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" asp-route-id="@agendamento.Id" 
                                               class="btn btn-outline-primary" title="Ver Detalhes">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            @if (agendamento.Status != "Cancelado" && agendamento.Status != "Concluido")
                                            {
                                                <a asp-action="Edit" asp-route-id="@agendamento.Id" 
                                                   class="btn btn-outline-warning" title="Editar">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <form asp-action="Cancelar" asp-route-id="@agendamento.Id" method="post" 
                                                      class="d-inline"
                                                      onsubmit="return confirm('Tem certeza que deseja cancelar este agendamento?');">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-outline-danger" title="Cancelar">
                                                        <i class="bi bi-x-circle"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <p class="text-muted">
                <i class="bi bi-info-circle"></i> 
                Mostrando <strong>@Model.Agendamentos.Count</strong> agendamento(s)
            </p>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> 
            Nenhum agendamento encontrado com os filtros selecionados.
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts após 5 segundos
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
