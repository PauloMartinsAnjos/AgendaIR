@model AgendaIR.Models.ViewModels.AgendamentoIndexViewModel

@{
    ViewData["Title"] = "Agendamentos";
    var isAdmin = Context.Session.GetString("IsAdmin") == "True";
}

<!-- PAGE HEADER -->
<div class="page-header-rir">
    <div>
        <h2>
            <i class="bi bi-calendar-check"></i> 
            @(isAdmin ? "Todos os Agendamentos" : "Meus Agendamentos")
        </h2>
        <p>@(isAdmin ? "Visualize e gerencie todos os agendamentos do sistema" : "Visualize e gerencie seus agendamentos")</p>
    </div>
</div>

<!-- MENSAGENS -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert-rir alert-rir-success">
        <i class="bi bi-check-circle-fill" style="font-size: 1.5rem;"></i>
        <div>
            <strong>Sucesso!</strong><br />
            @TempData["SuccessMessage"]
        </div>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert-rir alert-rir-danger">
        <i class="bi bi-exclamation-triangle-fill" style="font-size: 1.5rem;"></i>
        <div>
            <strong>Erro!</strong><br />
            @TempData["ErrorMessage"]
        </div>
    </div>
}

<!-- FILTROS -->
<div class="card-rir mb-4">
    <div class="card-rir-header">
        <h5 class="mb-0"><i class="bi bi-funnel"></i> Filtros</h5>
    </div>
    <div class="card-rir-body">
            <form asp-action="Index" method="get">
                <div class="row g-3">
                    <!-- Filtro Status -->
                    <div class="col-md-3">
                        <label asp-for="FiltroStatus" class="form-label">Status</label>
                        <select asp-for="FiltroStatus" class="form-select">
                            <option value="">Todos</option>
                            @foreach (var status in Model.StatusList)
                            {
                                <option value="@status">@status</option>
                            }
                        </select>
                    </div>

                    <!-- Filtro Data Início -->
                    <div class="col-md-3">
                        <label asp-for="FiltroDataInicio" class="form-label">Data Início</label>
                        <input asp-for="FiltroDataInicio" class="form-control" type="date" />
                    </div>

                    <!-- Filtro Data Fim -->
                    <div class="col-md-3">
                        <label asp-for="FiltroDataFim" class="form-label">Data Fim</label>
                        <input asp-for="FiltroDataFim" class="form-control" type="date" />
                    </div>

                    <!-- Filtro Funcionário (apenas para Admin) -->
                    @if (isAdmin && Model.Funcionarios != null)
                    {
                        <div class="col-md-3">
                            <label asp-for="FiltroFuncionarioId" class="form-label">Funcionário</label>
                            <select asp-for="FiltroFuncionarioId" class="form-select">
                                <option value="">Todos</option>
                                @foreach (var func in Model.Funcionarios)
                                {
                                    <option value="@func.Id">@func.Nome</option>
                                }
                            </select>
                        </div>
                    }
                </div>

                <div class="row mt-3">
                    <div class="col-md-12">
                        <div class="d-flex flex-column flex-md-row gap-2">
                            <button type="submit" class="btn-rir-primary">
                                <i class="bi bi-search"></i> Filtrar
                            </button>
                            <a asp-action="Index" class="btn-rir-secondary">
                                <i class="bi bi-x-circle"></i> Limpar Filtros
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Lista de Agendamentos -->
    @if (Model.Agendamentos.Any())
    {
        <!-- ✅ TABELA DESKTOP -->
        <div class="table-responsive-rir desktop-only">
            <table class="table-rir">
                <thead>
                    <tr>
                        <th>Data/Hora</th>
                        <th>Status</th>
                        <th>Cliente</th>
                        <th>E-mail</th>
                        @if (isAdmin)
                        {
                            <th>Funcionário</th>
                        }
                        <th>Documentos</th>
                        <th>Criado em</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var agendamento in Model.Agendamentos)
                    {
                        <tr>
                            <td>
                                <strong>@agendamento.DataHora.ToString("dd/MM/yyyy")</strong><br>
                                <small class="text-muted">@agendamento.DataHora.ToString("HH:mm")</small>
                            </td>
                            <td>
                                @if (agendamento.Status == "Pendente")
                                {
                                    <span class="badge-rir badge-rir-info">
                                        <i class="bi bi-clock"></i> Pendente
                                    </span>
                                }
                                else if (agendamento.Status == "Confirmado")
                                {
                                    <span class="badge-rir badge-rir-success">
                                        <i class="bi bi-check-circle"></i> Confirmado
                                    </span>
                                }
                                else if (agendamento.Status == "Concluido")
                                {
                                    <span class="badge-rir badge-rir-success">
                                        <i class="bi bi-check-all"></i> Concluído
                                    </span>
                                }
                                else if (agendamento.Status == "Cancelado")
                                {
                                    <span class="badge-rir badge-rir-danger">
                                        <i class="bi bi-x-circle"></i> Cancelado
                                    </span>
                                }
                            </td>
                            <td><strong>@agendamento.ClienteNome</strong></td>
                            <td><small>@agendamento.ClienteEmail</small></td>
                            @if (isAdmin)
                            {
                                <td>
                                    <span class="badge-rir badge-rir-info">
                                        <i class="bi bi-person"></i>
                                        @agendamento.FuncionarioNome
                                    </span>
                                </td>
                            }
                            <td>
                                <span class="badge-rir badge-rir-info">
                                    <i class="bi bi-file-earmark"></i> @agendamento.TotalDocumentos
                                </span>
                            </td>
                            <td>
                                <small>@agendamento.DataCriacao.ToString("dd/MM/yyyy")</small>
                            </td>
                            <td>
                                <div class="table-actions">
                                    <a asp-action="Details" asp-route-id="@agendamento.Id" 
                                       class="btn btn-sm btn-rir-secondary" title="Ver Detalhes">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    @if (agendamento.Status != "Cancelado" && agendamento.Status != "Concluido")
                                    {
                                        <a asp-action="Edit" asp-route-id="@agendamento.Id" 
                                           class="btn btn-sm btn-rir-primary" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form asp-action="Cancelar" asp-route-id="@agendamento.Id" method="post" 
                                              class="d-inline"
                                              onsubmit="return confirm('Tem certeza que deseja cancelar este agendamento?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-rir-danger" title="Cancelar">
                                                <i class="bi bi-x-circle"></i>
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- ✅ CARDS MOBILE -->
        <div class="mobile-only">
            @foreach (var agendamento in Model.Agendamentos)
            {
                <div class="client-card-mobile">
                    <div class="client-card-header">
                        <div class="client-card-name">
                            <i class="bi bi-calendar-event"></i>
                            <strong>@agendamento.ClienteNome</strong>
                        </div>
                        <div>
                            @if (agendamento.Status == "Pendente")
                            {
                                <span class="badge-rir badge-rir-info">
                                    <i class="bi bi-clock"></i> Pendente
                                </span>
                            }
                            else if (agendamento.Status == "Confirmado")
                            {
                                <span class="badge-rir badge-rir-success">
                                    <i class="bi bi-check-circle"></i> Confirmado
                                </span>
                            }
                            else if (agendamento.Status == "Concluido")
                            {
                                <span class="badge-rir badge-rir-success">
                                    <i class="bi bi-check-all"></i> Concluído
                                </span>
                            }
                            else if (agendamento.Status == "Cancelado")
                            {
                                <span class="badge-rir badge-rir-danger">
                                    <i class="bi bi-x-circle"></i> Cancelado
                                </span>
                            }
                        </div>
                    </div>

                    <div class="client-card-body">
                        <div class="client-info-row">
                            <i class="bi bi-calendar"></i>
                            <span><strong>@agendamento.DataHora.ToString("dd/MM/yyyy")</strong> às <strong>@agendamento.DataHora.ToString("HH:mm")</strong></span>
                        </div>
                        <div class="client-info-row">
                            <i class="bi bi-envelope"></i>
                            <span>@agendamento.ClienteEmail</span>
                        </div>
                        @if (isAdmin)
                        {
                            <div class="client-info-row">
                                <i class="bi bi-person-badge"></i>
                                <span class="badge-rir badge-rir-info">
                                    @agendamento.FuncionarioNome
                                </span>
                            </div>
                        }
                        <div class="client-info-row">
                            <i class="bi bi-file-earmark"></i>
                            <span class="badge-rir badge-rir-info">
                                @agendamento.TotalDocumentos documento(s)
                            </span>
                        </div>
                        <div class="client-info-row">
                            <i class="bi bi-clock-history"></i>
                            <span>Criado em @agendamento.DataCriacao.ToString("dd/MM/yyyy")</span>
                        </div>
                    </div>

                    <div class="client-card-actions">
                        <a asp-action="Details" asp-route-id="@agendamento.Id" 
                           class="btn btn-sm btn-rir-secondary">
                            <i class="bi bi-eye"></i> Ver
                        </a>
                        @if (agendamento.Status != "Cancelado" && agendamento.Status != "Concluido")
                        {
                            <a asp-action="Edit" asp-route-id="@agendamento.Id" 
                               class="btn btn-sm btn-rir-primary">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <form asp-action="Cancelar" asp-route-id="@agendamento.Id" method="post" 
                                  class="d-inline"
                                  onsubmit="return confirm('Tem certeza que deseja cancelar este agendamento?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-rir-danger">
                                    <i class="bi bi-x-circle"></i> Cancelar
                                </button>
                            </form>
                        }
                    </div>
                </div>
            }
        </div>

        <div class="mt-3">
            <p class="text-muted">
                <i class="bi bi-info-circle"></i> 
                Mostrando <strong>@Model.Agendamentos.Count</strong> agendamento(s)
            </p>
        </div>
    }
    else
    {
        <div class="card-rir">
            <div class="card-rir-body">
                <div class="table-empty">
                    <i class="bi bi-inbox"></i>
                    <h4>Nenhum agendamento encontrado</h4>
                    <p>Nenhum agendamento encontrado com os filtros selecionados.</p>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts após 5 segundos
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
