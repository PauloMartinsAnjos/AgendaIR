@model AgendaIR.Models.ViewModels.AgendamentoIndexViewModel

@{
    ViewData["Title"] = "Agendamentos";
}

<!-- PAGE HEADER -->
<div class="page-header-rir">
    <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
        <div>
            <h2><i class="bi bi-calendar-check"></i> Agendamentos</h2>
            <p>Gerencie os agendamentos do sistema</p>
        </div>
        <a asp-action="CreateAgendamento" class="btn-rir-primary">
            <i class="bi bi-plus-circle"></i> Novo Agendamento
        </a>
    </div>
</div>

<!-- MENSAGENS -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert-rir alert-rir-success">
        <i class="bi bi-check-circle-fill" style="font-size: 1.5rem;"></i>
        <div>
            <strong>Sucesso!</strong><br />
            @TempData["SuccessMessage"]
        </div>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert-rir alert-rir-danger">
        <i class="bi bi-exclamation-triangle-fill" style="font-size: 1.5rem;"></i>
        <div>
            <strong>Erro!</strong><br />
            @TempData["ErrorMessage"]
        </div>
    </div>
}

@* FILTROS AVAN√áADOS *@
<div class="card-rir mb-4">
    <div class="card-rir-header">
        <h5 class="mb-0"><i class="bi bi-funnel"></i> Filtros de Busca</h5>
    </div>
    <div class="card-rir-body">
        <form asp-action="Index" method="get">
            <div class="row g-3">
                @* Funcion√°rio Respons√°vel *@
                <div class="col-12 col-md-6 col-lg-4">
                    <label class="form-label fw-bold">
                        <i class="bi bi-person-badge"></i> Funcion√°rio Respons√°vel
                    </label>
                    @if (Model.IsAdmin)
                    {
                        <select name="filtroFuncionarioId" class="form-select">
                            <option value="">Todos os Funcion√°rios</option>
                            @foreach (var func in Model.Funcionarios)
                            {
                                <option value="@func.Id" selected="@(Model.FiltroFuncionarioId == func.Id)">
                                    @func.Nome
                                </option>
                            }
                        </select>
                    }
                    else
                    {
                        <input type="text" class="form-control" value="@Model.FuncionarioLogadoNome" readonly style="background-color: #f8f9fa;" />
                        <input type="hidden" name="filtroFuncionarioId" value="@Model.FuncionarioLogadoId" />
                    }
                </div>

                @* Cliente *@
                <div class="col-12 col-md-6 col-lg-4">
                    <label class="form-label fw-bold">
                        <i class="bi bi-people"></i> Cliente
                    </label>
                    <select name="filtroClienteId" class="form-select">
                        <option value="">Todos os Clientes</option>
                        @foreach (var cliente in Model.Clientes)
                        {
                            <option value="@cliente.Id" selected="@(Model.FiltroClienteId == cliente.Id)">
                                @cliente.Nome
                            </option>
                        }
                    </select>
                </div>

                @* Tipo de Agendamento *@
                <div class="col-12 col-md-6 col-lg-4">
                    <label class="form-label fw-bold">
                        <i class="bi bi-tag"></i> Tipo de Agendamento
                    </label>
                    <select name="filtroTipoId" class="form-select">
                        <option value="">Todos os Tipos</option>
                        @foreach (var tipo in Model.TiposAgendamento)
                        {
                            <option value="@tipo.Id" selected="@(Model.FiltroTipoId == tipo.Id)">
                                @tipo.Nome
                            </option>
                        }
                    </select>
                </div>

                @* Status *@
                <div class="col-12 col-md-6 col-lg-4">
                    <label class="form-label fw-bold">
                        <i class="bi bi-flag"></i> Status
                    </label>
                    <select name="filtroStatus" class="form-select">
                        <option value="">Todos os Status</option>
                        <option value="Pendente" selected="@(Model.FiltroStatus == "Pendente")">üü° Pendente</option>
                        <option value="Confirmado" selected="@(Model.FiltroStatus == "Confirmado")">üîµ Confirmado</option>
                        <option value="Conclu√≠do" selected="@(Model.FiltroStatus == "Conclu√≠do")">üü¢ Conclu√≠do</option>
                        <option value="Cancelado" selected="@(Model.FiltroStatus == "Cancelado")">üî¥ Cancelado</option>
                    </select>
                </div>

                @* Data In√≠cio *@
                <div class="col-12 col-md-6 col-lg-4">
                    <label class="form-label fw-bold">
                        <i class="bi bi-calendar-event"></i> Data In√≠cio
                    </label>
                    <input type="date" name="filtroDataInicio" class="form-control" 
                           value="@(Model.FiltroDataInicio?.ToString("yyyy-MM-dd"))" />
                </div>

                @* Data Fim *@
                <div class="col-12 col-md-6 col-lg-4">
                    <label class="form-label fw-bold">
                        <i class="bi bi-calendar-event"></i> Data Fim
                    </label>
                    <input type="date" name="filtroDataFim" class="form-control" 
                           value="@(Model.FiltroDataFim?.ToString("yyyy-MM-dd"))" />
                </div>
            </div>

            <div class="mt-3 d-flex gap-2">
                <button type="submit" class="btn-rir-primary">
                    <i class="bi bi-search"></i> Filtrar
                </button>
                <a asp-action="Index" class="btn-rir-secondary">
                    <i class="bi bi-x-circle"></i> Limpar Filtros
                </a>
            </div>
        </form>
    </div>
</div>

@* Contador de Resultados *@
<div class="alert alert-info mb-3">
    <i class="bi bi-info-circle"></i> 
    <strong>@Model.Agendamentos.Count</strong> agendamento(s) encontrado(s)
</div>

<!-- TABELA DE AGENDAMENTOS -->
<div class="card-rir">
    <div class="card-rir-body">
        @if (!Model.Agendamentos.Any())
        {
            <div class="alert-rir alert-rir-info">
                <i class="bi bi-info-circle"></i>
                <div>
                    <strong>Nenhum agendamento encontrado</strong><br />
                    Clique em "Novo Agendamento" para criar o primeiro.
                </div>
            </div>
        }
        else
        {
            <!-- ‚úÖ TABELA DESKTOP -->
            <div class="table-responsive desktop-only">
                <table class="table-rir">
                    <thead>
                        <tr>
                            <th>Cliente</th>
                            <th>Tipo</th>
                            <th>Data/Hora</th>
                            <th>Status</th>
                            <th>Respons√°vel</th>
                            <th class="text-end">A√ß√µes</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Agendamentos)
                        {
                            <tr>
                                <td>
                                    <strong>@item.ClienteNome</strong><br />
                                    <small class="text-muted">CPF: @(item.ClienteCPF ?? "N/A")</small>
                                </td>
                                <td>
                                    <span class="badge-rir badge-rir-info">
                                        @(item.TipoAgendamentoNome ?? "N√£o especificado")
                                    </span>
                                </td>
                                <td>
                                    <i class="bi bi-calendar"></i> @item.DataHora.ToString("dd/MM/yyyy")<br />
                                        <small class="text-muted"><i class="bi bi-clock"></i> @item.DataHora.ToString("HH:mm")</small>
                                    </td>
                                    <td>
                                        @switch (item.Status.ToLower())
                                        {
                                            case "pendente":
                                                <span class="badge-rir badge-rir-warning">Pendente</span>
                                                break;
                                            case "confirmado":
                                                <span class="badge-rir badge-rir-success">Confirmado</span>
                                                break;
                                            case "conclu√≠do":
                                            case "concluido":
                                                <span class="badge-rir badge-rir-primary">Conclu√≠do</span>
                                                break;
                                            case "cancelado":
                                                <span class="badge-rir badge-rir-danger">Cancelado</span>
                                                break;
                                            default:
                                                <span class="badge-rir badge-rir-secondary">@item.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <small>@item.FuncionarioNome</small>
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-rir-secondary" 
                                               title="Ver detalhes">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-rir-primary" 
                                               title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-rir-danger" 
                                               title="Excluir">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- ‚úÖ CARDS MOBILE -->
                <div class="mobile-only">
                    @foreach (var item in Model.Agendamentos)
                    {
                        <div class="client-card-mobile">
                            <div class="client-card-header">
                                <div class="client-card-name">
                                    <i class="bi bi-calendar-event"></i>
                                    <strong>@item.ClienteNome</strong>
                                </div>
                                <div>
                                    @switch (item.Status.ToLower())
                                    {
                                        case "pendente":
                                            <span class="badge-rir badge-rir-warning">Pendente</span>
                                            break;
                                        case "confirmado":
                                            <span class="badge-rir badge-rir-success">Confirmado</span>
                                            break;
                                        case "conclu√≠do":
                                        case "concluido":
                                            <span class="badge-rir badge-rir-primary">Conclu√≠do</span>
                                            break;
                                        case "cancelado":
                                            <span class="badge-rir badge-rir-danger">Cancelado</span>
                                            break;
                                        default:
                                            <span class="badge-rir badge-rir-secondary">@item.Status</span>
                                            break;
                                    }
                                </div>
                            </div>

                            <div class="client-card-body">
                                <div class="client-info-row">
                                    <i class="bi bi-calendar"></i>
                                    <span><strong>@item.DataHora.ToString("dd/MM/yyyy")</strong> √†s <strong>@item.DataHora.ToString("HH:mm")</strong></span>
                                </div>
                                <div class="client-info-row">
                                    <i class="bi bi-person-badge"></i>
                                    <span>@item.FuncionarioNome</span>
                                </div>
                                <div class="client-info-row">
                                    <i class="bi bi-tag"></i>
                                    <span class="badge-rir badge-rir-info">
                                        @(item.TipoAgendamentoNome ?? "N√£o especificado")
                                    </span>
                                </div>
                            </div>

                            <div class="client-card-actions">
                                <a asp-action="Details" asp-route-id="@item.Id" 
                                   class="btn btn-sm btn-rir-secondary">
                                    <i class="bi bi-eye"></i> Ver
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" 
                                   class="btn btn-sm btn-rir-primary">
                                    <i class="bi bi-pencil"></i> Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" 
                                   class="btn btn-sm btn-rir-danger">
                                    <i class="bi bi-trash"></i> Excluir
                                </a>
                            </div>
                        </div>
                    }
                </div>

                <div class="mt-3">
                    <p class="text-muted">
                        <i class="bi bi-info-circle"></i> 
                        Mostrando <strong>@Model.Agendamentos.Count</strong> agendamento(s)
                    </p>
                </div>
            }
        </div>
    </div>

@section Scripts {
    <script>
        // Auto-dismiss alerts ap√≥s 5 segundos
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
