@model AgendaIR.Models.ViewModels.AgendamentoCreateViewModel

@{
    ViewData["Title"] = "Novo Agendamento";
    var isAdmin = User.FindFirst("IsAdmin")?.Value == "True";
}

<div class="page-header-rir">
    <div>
        <h2><i class="bi bi-calendar-plus"></i> Novo Agendamento</h2>
        <p>Crie um novo agendamento para um cliente</p>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-12 col-lg-10">
        <div class="card-rir">
            <div class="card-rir-body">
                <form asp-action="CreateAgendamento" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert-rir alert-rir-danger"></div>

                    <!-- Cliente -->
                    <!-- ✅ NOVO: Autocomplete Cliente -->
                    <div class="mb-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-person"></i> Cliente <span class="text-danger">*</span>
                        </label>
                        <input type="hidden" asp-for="ClienteId" id="clienteIdHidden" />
                        <input type="text" 
                               id="clienteAutocomplete" 
                               class="form-control" 
                               placeholder="Digite o nome ou CPF do cliente..."
                               autocomplete="off" />
                        <div id="clienteSuggestions" class="list-group" style="position: absolute; z-index: 1000; max-height: 300px; overflow-y: auto; display: none;"></div>
                        <div id="clienteSelecionado" style="display: none; margin-top: 10px;">
                            <div class="alert alert-success">
                                <i class="bi bi-check-circle"></i> <strong id="clienteNomeSelecionado"></strong><br />
                                <small id="clienteCpfSelecionado"></small>
                                <button type="button" class="btn btn-sm btn-outline-danger float-end" onclick="limparCliente()">
                                    <i class="bi bi-x"></i> Alterar
                                </button>
                            </div>
                        </div>
                        <span asp-validation-for="ClienteId" class="text-danger"></span>
                    </div>

                    <!-- FUNCIONÁRIO RESPONSÁVEL -->
                    <div class="mb-4">
                        <label asp-for="FuncionarioId" class="form-label fw-bold">
                            <i class="bi bi-person-badge"></i> Funcionário Responsável
                        </label>
                        <select asp-for="FuncionarioId" 
                                class="form-select" 
                                asp-items="@(new SelectList(ViewBag.Funcionarios, "Id", "Nome"))"
                                onchange="onFuncionarioChange(this.value)"
                                required>
                            <option value="">-- Selecione --</option>
                        </select>
                        <span asp-validation-for="FuncionarioId" class="text-danger"></span>
                    </div>

                    <!-- Tipo de Agendamento -->
                    <div class="mb-3">
                        <label asp-for="TipoAgendamentoId" class="form-label fw-bold">
                            <i class="bi bi-list-task"></i> Tipo de Agendamento <span class="text-danger">*</span>
                        </label>
                        <select asp-for="TipoAgendamentoId" class="form-select" id="tipoAgendamentoSelect" required>
                            <option value="">-- Selecione o tipo --</option>
                            @{
                                var tiposAgendamento = ViewBag.TiposAgendamento as List<AgendaIR.Models.TipoAgendamento>;
                                if (tiposAgendamento != null)
                                {
                                    foreach (var tipo in tiposAgendamento)
                                    {
                                        <option value="@tipo.Id">@tipo.Nome</option>
                                    }
                                }
                            }
                        </select>
                        <span asp-validation-for="TipoAgendamentoId" class="text-danger"></span>
                    </div>

                    <!-- DATA E HORÁRIO -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">
                            <i class="bi bi-calendar-event"></i> Data e Horário
                        </label>
                        
                        <div class="data-hora-container">
                            <!-- Calendário (Esquerda) -->
                            <div class="calendario-wrapper">
                                <div id="calendario"></div>
                            </div>
                            
                            <!-- Horários Disponíveis (Direita) -->
                            <div class="horarios-wrapper">
                                <div id="horarios-disponiveis">
                                    <div class="alert-rir alert-rir-info">
                                        ℹ️ Selecione um dia no calendário
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Campo hidden para enviar no POST -->
                        <input type="hidden" asp-for="DataHora" id="DataHora" />
                        <span asp-validation-for="DataHora" class="text-danger"></span>
                        
                        <!-- Confirmação visual -->
                        <div id="confirmacao-horario" class="mt-2"></div>
                    </div>

                    <!-- Observações -->
                    <div class="mb-3">
                        <label asp-for="Observacoes" class="form-label fw-bold">
                            <i class="bi bi-chat-left-text"></i> Observações
                        </label>
                        <textarea asp-for="Observacoes" class="form-control" rows="3"></textarea>
                    </div>

                    <!-- PARTICIPANTES ADICIONAIS -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">
                            <i class="bi bi-people-fill"></i> Participantes Adicionais
                            <small class="text-muted">(opcional)</small>
                        </label>
                        
                        <div class="participantes-wrapper">
                            <input type="email" 
                                   id="participantes-input" 
                                   class="form-control" 
                                   placeholder="Digite o email e pressione Enter"
                                   autocomplete="off" />
                            
                            <input type="hidden" 
                                   id="ParticipantesJson" 
                                   name="ParticipantesJson" />
                            
                            <div class="participantes-info">
                                <i class="bi bi-info-circle-fill"></i>
                                <div>
                                    Todos os participantes receberão convite no Google Calendar.
                                    <span id="participant-counter" class="participant-counter">0 participante(s)</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- ✅ NOVO: Upload Individual por Documento -->
                    <div id="documentosContainer" style="display:none;">
                        <hr />
                        <h5 class="mb-3">
                            <i class="bi bi-paperclip"></i> Documentos Necessários
                        </h5>
                        <div id="documentosList"></div>
                    </div>

                    <div class="d-flex justify-content-between gap-2">
                        <a asp-action="Index" class="btn-rir-secondary">
                            <i class="bi bi-arrow-left"></i> Cancelar
                        </a>
                        <button type="submit" class="btn-rir-primary">
                            <i class="bi bi-save"></i> Salvar Agendamento
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- CSS e JS do Calendário -->
<link rel="stylesheet" href="~/css/rir-design/calendario.css" />
<link rel="stylesheet" href="~/css/rir-design/tag-input.css" />
<script src="~/js/calendario-disponibilidade.js"></script>
<script src="~/js/tag-input-participantes.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // ========================================
        // AUTOCOMPLETE DE CLIENTES
        // ========================================
        let timeoutId;
        const autocompleteInput = document.getElementById('clienteAutocomplete');
        const suggestionsDiv = document.getElementById('clienteSuggestions');
        const clienteIdHidden = document.getElementById('clienteIdHidden');
        const clienteSelecionadoDiv = document.getElementById('clienteSelecionado');

        // Buscar clientes ao digitar
        autocompleteInput.addEventListener('input', function() {
            clearTimeout(timeoutId);
            const termo = this.value;

            if (termo.length < 2) {
                suggestionsDiv.style.display = 'none';
                return;
            }

            timeoutId = setTimeout(() => {
                fetch(`/api/clientes/buscar?termo=${encodeURIComponent(termo)}`)
                    .then(response => response.json())
                    .then(clientes => {
                        suggestionsDiv.innerHTML = '';
                        
                        if (clientes.length === 0) {
                            suggestionsDiv.innerHTML = '<div class="list-group-item text-muted">Nenhum cliente encontrado</div>';
                        } else {
                            clientes.forEach(cliente => {
                                const item = document.createElement('a');
                                item.href = '#';
                                item.className = 'list-group-item list-group-item-action';
                                item.innerHTML = `
                                    <strong>${cliente.nome}</strong><br />
                                    <small class="text-muted">CPF: ${cliente.cpf} | Tel: ${cliente.telefone || 'N/A'}</small>
                                `;
                                item.onclick = (e) => {
                                    e.preventDefault();
                                    selecionarCliente(cliente);
                                };
                                suggestionsDiv.appendChild(item);
                            });
                        }
                        
                        suggestionsDiv.style.display = 'block';
                    });
            }, 300); // Delay de 300ms
        });

        // Selecionar cliente
        function selecionarCliente(cliente) {
            clienteIdHidden.value = cliente.id;
            autocompleteInput.style.display = 'none';
            suggestionsDiv.style.display = 'none';
            clienteSelecionadoDiv.style.display = 'block';
            document.getElementById('clienteNomeSelecionado').textContent = cliente.nome;
            document.getElementById('clienteCpfSelecionado').textContent = `CPF: ${cliente.cpf} | Tel: ${cliente.telefone || 'N/A'}`;
        }

        // Limpar seleção
        function limparCliente() {
            clienteIdHidden.value = '';
            autocompleteInput.value = '';
            autocompleteInput.style.display = 'block';
            clienteSelecionadoDiv.style.display = 'none';
        }

        // Fechar sugestões ao clicar fora
        document.addEventListener('click', function(e) {
            if (!autocompleteInput.contains(e.target) && !suggestionsDiv.contains(e.target)) {
                suggestionsDiv.style.display = 'none';
            }
        });

        // ========================================
        // UPLOAD INDIVIDUAL POR DOCUMENTO
        // ========================================
        // Carregar documentos ao selecionar tipo
        document.getElementById('tipoAgendamentoSelect').addEventListener('change', function() {
            const tipoId = this.value;
            const container = document.getElementById('documentosContainer');
            const lista = document.getElementById('documentosList');

            if (!tipoId) {
                container.style.display = 'none';
                return;
            }

            // Buscar documentos deste tipo
            fetch(`/api/documentos/porTipo/${tipoId}`)
                .then(response => response.json())
                .then(docs => {
                    if (docs.length > 0) {
                        let html = '';
                        
                        docs.forEach(doc => {
                            const badgeClass = doc.obrigatorio ? 'badge-rir-danger' : 'badge-rir-secondary';
                            const badgeText = doc.obrigatorio ? 'Obrigatório' : 'Opcional';
                            const required = doc.obrigatorio ? 'required' : '';
                            
                            html += `
                                <div class="card-rir mb-3">
                                    <div class="card-rir-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <div>
                                                <h6 class="mb-1">
                                                    <i class="bi bi-file-earmark-pdf"></i> ${doc.nome}
                                                </h6>
                                                ${doc.descricao ? `<small class="text-muted">${doc.descricao}</small>` : ''}
                                            </div>
                                            <span class="badge-rir ${badgeClass}">${badgeText}</span>
                                        </div>
                                        <input type="file" 
                                               name="documento_${doc.id}" 
                                               class="form-control" 
                                               accept=".pdf,.jpg,.jpeg,.png"
                                               data-documento-id="${doc.id}"
                                               data-documento-nome="${doc.nome}"
                                               data-obrigatorio="${doc.obrigatorio}"
                                               ${required} />
                                        <small class="form-text text-muted">Formatos: PDF, JPG, PNG (máx. 10MB)</small>
                                    </div>
                                </div>
                            `;
                        });
                        
                        lista.innerHTML = html;
                        container.style.display = 'block';
                    } else {
                        container.style.display = 'none';
                    }
                })
                .catch(error => {
                    console.error('Erro ao buscar documentos:', error);
                    container.style.display = 'none';
                });
        });
    </script>
}
