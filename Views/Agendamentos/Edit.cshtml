@model AgendaIR.Models.ViewModels.AgendamentoEditViewModel

@{
    ViewData["Title"] = "Editar Agendamento";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2><i class="bi bi-pencil-square"></i> Editar Agendamento</h2>
            <p class="text-muted">Atualize o status e observações do agendamento</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Informações do Cliente (Readonly) -->
                        <div class="card mb-4 bg-light">
                            <div class="card-body">
                                <h5 class="card-title"><i class="bi bi-person"></i> Informações do Cliente</h5>
                                <div class="row">
                                    <div class="col-md-6">
                                        <p class="mb-1"><strong>Nome:</strong> @Model.ClienteNome</p>
                                    </div>
                                    <div class="col-md-6">
                                        <p class="mb-1"><strong>E-mail:</strong> @Model.ClienteEmail</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <p class="mb-0"><strong>Telefone:</strong> @Model.ClienteTelefone</p>
                                    </div>
                                    <div class="col-md-6">
                                        <p class="mb-0"><strong>Funcionário:</strong> @Model.FuncionarioNome</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Data e Hora (Readonly) -->
                        <div class="mb-4">
                            <label class="form-label">
                                <i class="bi bi-calendar-event"></i> Data e Hora do Agendamento
                            </label>
                            <input type="text" class="form-control" 
                                   value="@Model.DataHora.ToString("dd/MM/yyyy HH:mm")" 
                                   readonly disabled />
                            <small class="form-text text-muted">
                                <i class="bi bi-info-circle"></i> A data e hora não podem ser alteradas após a criação
                            </small>
                        </div>

                        <!-- Status -->
                        <div class="mb-4">
                            <label asp-for="Status" class="form-label">
                                <i class="bi bi-flag"></i> Status do Agendamento
                            </label>
                            <select asp-for="Status" class="form-select">
                                @foreach (var status in Model.StatusList)
                                {
                                    <option value="@status">@status</option>
                                }
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                            <small class="form-text text-muted">
                                <ul class="mb-0 mt-2">
                                    <li><strong>Pendente:</strong> Agendamento aguardando confirmação</li>
                                    <li><strong>Confirmado:</strong> Agendamento confirmado e ativo</li>
                                    <li><strong>Concluído:</strong> Atendimento foi realizado</li>
                                    <li><strong>Cancelado:</strong> Agendamento foi cancelado</li>
                                </ul>
                            </small>
                        </div>

                        <!-- Observações -->
                        <div class="mb-4">
                            <label asp-for="Observacoes" class="form-label">
                                <i class="bi bi-chat-text"></i> Observações
                            </label>
                            <textarea asp-for="Observacoes" class="form-control" rows="5" 
                                      placeholder="Adicione observações sobre o agendamento, detalhes do atendimento, etc..."></textarea>
                            <span asp-validation-for="Observacoes" class="text-danger"></span>
                            <small class="form-text text-muted">
                                Adicione informações relevantes sobre o agendamento
                            </small>
                        </div>

                        <!-- Avisos Importantes -->
                        <div class="alert alert-warning" role="alert">
                            <h6 class="alert-heading"><i class="bi bi-exclamation-triangle"></i> Importante!</h6>
                            <ul class="mb-0">
                                <li>Alterações no status serão registradas no sistema</li>
                                <li>O cliente poderá visualizar o status atualizado</li>
                                <li>Ao marcar como "Concluído", o atendimento será considerado finalizado</li>
                                <li>Ao marcar como "Cancelado", o evento será removido do Google Calendar</li>
                            </ul>
                        </div>

                        <!-- Botões de Ação -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Voltar
                            </a>
                            <div>
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle"></i> Cancelar
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle"></i> Salvar Alterações
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Alerta ao mudar status para Cancelado ou Concluído
        document.querySelector('select[name="Status"]').addEventListener('change', function() {
            if (this.value === 'Cancelado') {
                if (!confirm('Ao cancelar o agendamento, o evento será removido do Google Calendar. Confirma?')) {
                    this.value = '@Model.Status'; // Reverter
                }
            } else if (this.value === 'Concluido') {
                if (!confirm('Ao marcar como Concluído, o atendimento será considerado finalizado. Confirma?')) {
                    this.value = '@Model.Status'; // Reverter
                }
            }
        });

        // Confirmação ao submeter o formulário
        document.querySelector('form').addEventListener('submit', function(e) {
            var status = document.querySelector('select[name="Status"]').value;
            if (status === 'Cancelado' || status === 'Concluido') {
                if (!confirm('Tem certeza que deseja salvar estas alterações?')) {
                    e.preventDefault();
                }
            }
        });
    </script>
}
