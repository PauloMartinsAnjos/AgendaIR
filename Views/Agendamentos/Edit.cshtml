@model AgendaIR.Models.ViewModels.AgendamentoEditViewModel

@{
    ViewData["Title"] = "Editar Agendamento";
}

<!-- PAGE HEADER -->
<div class="page-header-rir">
    <div>
        <h2><i class="bi bi-pencil-square"></i> Editar Agendamento</h2>
        <p>Atualize o status e observações do agendamento</p>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-12 col-lg-10">
        <div class="card-rir">
            <div class="card-rir-body">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="ClienteId" />
                    <input type="hidden" asp-for="DataHoraOriginal" />
                    <input type="hidden" asp-for="GoogleCalendarEventId" />
                    <input type="hidden" asp-for="FuncionarioGoogleEmail" />
                    
                    <div asp-validation-summary="ModelOnly" class="alert-rir alert-rir-danger" role="alert"></div>

                    <!-- Informações do Cliente (Readonly) -->
                    <div class="alert-rir alert-rir-info mb-4">
                        <i class="bi bi-person" style="font-size: 1.5rem;"></i>
                        <div>
                            <strong>Informações do Cliente</strong><br />
                            <div class="row mt-2">
                                <div class="col-12 col-md-6 mb-2 mb-md-0">
                                    <strong>Nome:</strong> @Model.ClienteNome<br />
                                    <strong>Telefone:</strong> @Model.ClienteTelefone
                                </div>
                                <div class="col-12 col-md-6">
                                    <strong>E-mail:</strong> @Model.ClienteEmail
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- PARTICIPANTES ADICIONAIS -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">
                            <i class="bi bi-people-fill"></i> Participantes Adicionais
                            <small class="text-muted">(opcional)</small>
                        </label>
                        
                        <div class="participantes-wrapper">
                            <input type="email" 
                                   id="participantes-input" 
                                   class="form-control" 
                                   placeholder="Digite o email e pressione Enter"
                                   autocomplete="off" />
                            
                            <input type="hidden" 
                                   id="ParticipantesJson" 
                                   name="ParticipantesJson" 
                                   value='@Json.Serialize(Model.Participantes?.Select(p => p.Email).ToList() ?? new List<string>())' />
                            
                            <div class="participantes-info">
                                <i class="bi bi-info-circle-fill"></i>
                                <div>
                                    Todos os participantes receberão convite no Google Calendar.
                                    <span id="participant-counter" class="participant-counter">
                                        @(Model.Participantes?.Count ?? 0) participante(s)
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- TIPO DE AGENDAMENTO -->
                    @if (ViewBag.TiposAgendamento != null)
                    {
                        <div class="mb-4">
                            <label asp-for="TipoAgendamentoId" class="form-label fw-bold">
                                <i class="bi bi-bookmark"></i> Tipo de Agendamento
                            </label>
                            <select asp-for="TipoAgendamentoId" 
                                    class="form-select" 
                                    asp-items="@(new SelectList(ViewBag.TiposAgendamento, "Id", "Nome"))">
                                <option value="">-- Selecione --</option>
                            </select>
                            <span asp-validation-for="TipoAgendamentoId" class="text-danger"></span>
                        </div>
                    }

                    <!-- FUNCIONÁRIO RESPONSÁVEL -->
                    <div class="mb-4">
                        <label asp-for="FuncionarioId" class="form-label fw-bold">
                            <i class="bi bi-person-badge"></i> Funcionário Responsável
                        </label>
                        <select asp-for="FuncionarioId" 
                                class="form-select" 
                                asp-items="@(new SelectList(ViewBag.Funcionarios, "Id", "Nome"))"
                                onchange="onFuncionarioChange(this.value)"
                                required>
                            <option value="">-- Selecione --</option>
                        </select>
                        <span asp-validation-for="FuncionarioId" class="text-danger"></span>
                    </div>

                    <!-- DATA E HORÁRIO -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">
                            <i class="bi bi-calendar-event"></i> Data e Horário
                        </label>
                        
                        <div class="data-hora-container">
                            <!-- Calendário (Esquerda) -->
                            <div class="calendario-wrapper">
                                <div id="calendario"></div>
                            </div>
                            
                            <!-- Horários Disponíveis (Direita) -->
                            <div class="horarios-wrapper">
                                <div id="horarios-disponiveis">
                                    <div class="alert-rir alert-rir-info">
                                        ℹ️ Selecione um dia no calendário
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Campo hidden para enviar no POST -->
                        <input type="hidden" asp-for="DataHora" id="DataHora" />
                        <span asp-validation-for="DataHora" class="text-danger"></span>
                        
                        <!-- Confirmação visual -->
                        <div id="confirmacao-horario" class="mt-2"></div>
                    </div>

                    <div class="row">
                        <!-- Status -->
                        <div class="col-12 col-md-6 mb-4">
                            <label asp-for="Status" class="form-label fw-bold">
                                <i class="bi bi-flag"></i> Status do Agendamento
                            </label>
                            <select asp-for="Status" class="form-select">
                                @foreach (var status in Model.StatusList)
                                {
                                    <option value="@status">@status</option>
                                }
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="alert-rir alert-rir-info mb-3">
                        <i class="bi bi-info-circle" style="font-size: 1.5rem;"></i>
                        <div>
                            <strong>Status do Agendamento:</strong><br />
                            <ul class="mb-0 mt-2">
                                <li><strong>Pendente:</strong> Agendamento aguardando confirmação</li>
                                <li><strong>Confirmado:</strong> Agendamento confirmado e ativo</li>
                                <li><strong>Concluído:</strong> Atendimento foi realizado</li>
                                <li><strong>Cancelado:</strong> Agendamento foi cancelado</li>
                            </ul>
                        </div>
                    </div>

                    <!-- Observações -->
                    <div class="mb-4">
                        <label asp-for="Observacoes" class="form-label fw-bold">
                            <i class="bi bi-chat-text"></i> Observações
                        </label>
                        <textarea asp-for="Observacoes" class="form-control" rows="5" 
                                  placeholder="Adicione observações sobre o agendamento, detalhes do atendimento, etc..."></textarea>
                        <span asp-validation-for="Observacoes" class="text-danger"></span>
                        <small class="form-text text-muted">
                            Adicione informações relevantes sobre o agendamento
                        </small>
                    </div>

                    <!-- Avisos Importantes -->
                    <div class="alert-rir alert-rir-info mb-4">
                        <i class="bi bi-exclamation-triangle" style="font-size: 1.5rem;"></i>
                        <div>
                            <strong>Importante!</strong><br />
                            <ul class="mb-0 mt-2">
                                <li>Alterações no status serão registradas no sistema</li>
                                <li>O cliente poderá visualizar o status atualizado</li>
                                <li>Ao marcar como "Concluído", o atendimento será considerado finalizado</li>
                                <li>Ao marcar como "Cancelado", o evento será removido do Google Calendar</li>
                            </ul>
                        </div>
                    </div>

                    <!-- Documentos Anexados -->
                    @if (Model.DocumentosAnexados != null && Model.DocumentosAnexados.Any())
                    {
                        <div class="mb-4">
                            <h5 class="mb-3"><i class="bi bi-file-earmark-text"></i> Documentos Anexados</h5>
                            <div class="list-group">
                                @foreach (var doc in Model.DocumentosAnexados)
                                {
                                    <div class="list-group-item">
                                        <div class="d-flex w-100 justify-content-between align-items-start flex-column flex-md-row gap-2">
                                            <div class="flex-grow-1">
                                                <h6 class="mb-1">
                                                    <i class="bi bi-file-earmark-pdf"></i> @doc.DocumentoSolicitado?.Nome
                                                </h6>
                                                <p class="mb-1">
                                                    <small class="text-muted">Arquivo: @doc.NomeArquivo</small>
                                                </p>
                                                <small class="text-muted">
                                                    Tamanho: @((doc.TamanhoOriginalBytes / 1024.0).ToString("0.00")) KB | 
                                                    Enviado em: @doc.DataUpload.ToString("dd/MM/yyyy HH:mm")
                                                </small>
                                            </div>
                                            <div>
                                                <a asp-action="DownloadDocumento" asp-route-id="@doc.Id" 
                                                   class="btn btn-sm btn-rir-secondary" title="Download">
                                                    <i class="bi bi-download"></i> Download
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <!-- Botões de Ação -->
                    <div class="d-flex flex-column flex-md-row justify-content-between gap-2">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn-rir-secondary">
                            <i class="bi bi-arrow-left"></i> Voltar
                        </a>
                        <div class="d-flex flex-column flex-md-row gap-2">
                            <a asp-action="Index" class="btn-rir-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                            <button type="submit" class="btn-rir-primary">
                                <i class="bi bi-check-circle"></i> Salvar Alterações
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <!-- CSS e JS -->
    <link rel="stylesheet" href="~/css/rir-design/calendario.css" />
    <link rel="stylesheet" href="~/css/rir-design/tag-input.css" />

    <script src="~/js/calendario-disponibilidade.js"></script>
    <script src="~/js/tag-input-participantes.js"></script>

    <script>
    // Pré-carregar participantes existentes
    document.addEventListener('DOMContentLoaded', () => {
        const participantesJson = document.getElementById('ParticipantesJson').value;
        
        if (participantesJson && participantesInput) {
            try {
                const emails = JSON.parse(participantesJson);
                participantesInput.tags = emails;
                emails.forEach(email => participantesInput.renderTag(email));
                participantesInput.updateHiddenInput();
            } catch (e) {
                console.error('Erro ao carregar participantes:', e);
            }
        }
        
        // Pré-selecionar funcionário e data
        const funcionarioId = @Model.FuncionarioId;
        const dataHoraAtual = new Date('@Model.DataHora.ToString("o")');
        const agendamentoId = @Model.Id;
        
        if (funcionarioId) {
            // Aguardar calendário renderizar, depois selecionar data
            setTimeout(() => {
                calendarioState.funcionarioId = funcionarioId;
                calendarioState.dataSelecionada = dataHoraAtual;
                calendarioState.ignorarAgendamentoId = agendamentoId; // Ignorar próprio agendamento
                carregarHorarios(dataHoraAtual);
            }, 500);
        }
    });
    
    // Alerta ao mudar status para Cancelado ou Concluído
    const statusSelect = document.querySelector('select[name="Status"]');
    if (statusSelect) {
        statusSelect.addEventListener('change', function() {
            if (this.value === 'Cancelado') {
                if (!confirm('Ao cancelar o agendamento, o evento será removido do Google Calendar. Confirma?')) {
                    this.value = '@Model.Status'; // Reverter
                }
            } else if (this.value === 'Concluido') {
                if (!confirm('Ao marcar como Concluído, o atendimento será considerado finalizado. Confirma?')) {
                    this.value = '@Model.Status'; // Reverter
                }
            }
        });
    }

    // Confirmação ao submeter o formulário
    document.querySelector('form').addEventListener('submit', function(e) {
        const status = document.querySelector('select[name="Status"]');
        if (status && (status.value === 'Cancelado' || status.value === 'Concluido')) {
            if (!confirm('Tem certeza que deseja salvar estas alterações?')) {
                e.preventDefault();
            }
        }
    });
    </script>
}
