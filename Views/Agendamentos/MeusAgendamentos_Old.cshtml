@model AgendaIR.Models.ViewModels.AgendamentoIndexViewModel

@{
    ViewData["Title"] = "Meus Agendamentos";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2><i class="bi bi-calendar-check"></i> Meus Agendamentos</h2>
            <p class="text-muted">Visualize e gerencie seus agendamentos de atendimento IR</p>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row mb-3">
        <div class="col-md-12">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Novo Agendamento
            </a>
        </div>
    </div>

    @if (Model.Agendamentos.Any())
    {
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Data/Hora</th>
                                <th>Status</th>
                                <th>Funcionário</th>
                                <th>Documentos</th>
                                <th>Criado em</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var agendamento in Model.Agendamentos)
                            {
                                <tr>
                                    <td>
                                        <strong>@agendamento.DataHora.ToString("dd/MM/yyyy")</strong><br>
                                        <small class="text-muted">@agendamento.DataHora.ToString("HH:mm")</small>
                                    </td>
                                    <td>
                                        @if (agendamento.Status == "Pendente")
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-clock"></i> Pendente
                                            </span>
                                        }
                                        else if (agendamento.Status == "Confirmado")
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Confirmado
                                            </span>
                                        }
                                        else if (agendamento.Status == "Concluido")
                                        {
                                            <span class="badge bg-primary">
                                                <i class="bi bi-check-all"></i> Concluído
                                            </span>
                                        }
                                        else if (agendamento.Status == "Cancelado")
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-x-circle"></i> Cancelado
                                            </span>
                                        }
                                    </td>
                                    <td>@agendamento.FuncionarioNome</td>
                                    <td>
                                        <span class="badge bg-info">
                                            <i class="bi bi-file-earmark"></i> @agendamento.TotalDocumentos
                                        </span>
                                    </td>
                                    <td>
                                        <small>@agendamento.DataCriacao.ToString("dd/MM/yyyy HH:mm")</small>
                                    </td>
                                    <td>
                                        @if (agendamento.Status != "Cancelado" && agendamento.Status != "Concluido")
                                        {
                                            @if ((agendamento.DataHora - DateTime.Now).TotalHours > 24)
                                            {
                                                <form asp-action="CancelMeu" asp-route-id="@agendamento.Id" method="post" class="d-inline"
                                                      onsubmit="return confirm('Tem certeza que deseja cancelar este agendamento?');">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Cancelar agendamento">
                                                        <i class="bi bi-x-circle"></i> Cancelar
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <small class="text-muted">Não é possível cancelar</small>
                                            }
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> 
            Você ainda não possui agendamentos. 
            <a asp-action="Create" class="alert-link">Clique aqui para criar seu primeiro agendamento</a>.
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts após 5 segundos
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
