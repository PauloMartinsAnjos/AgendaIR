@model IEnumerable<AgendaIR.Models.Funcionario>

@{
    ViewData["Title"] = "Gerenciar Funcionários";
}

<!-- PAGE HEADER -->
<div class="page-header-rir">
    <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
        <div>
            <h2><i class="bi bi-people-fill"></i> Gerenciar Funcionários</h2>
            <p>Controle de acesso e permissões do sistema</p>
        </div>
        <a asp-action="Create" class="btn-rir-primary">
            <i class="bi bi-plus-circle"></i> Novo Funcionário
        </a>
    </div>
</div>

<!-- MENSAGENS -->
@if (TempData["Success"] != null)
{
    <div class="alert-rir alert-rir-success">
        <i class="bi bi-check-circle-fill" style="font-size: 1.5rem;"></i>
        <div>
            <strong>Sucesso!</strong><br />
            @TempData["Success"]
        </div>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert-rir alert-rir-danger">
        <i class="bi bi-exclamation-triangle-fill" style="font-size: 1.5rem;"></i>
        <div>
            <strong>Erro!</strong><br />
            @TempData["Error"]
        </div>
    </div>
}

<!-- FILTROS -->
<div class="card-rir mb-4">
    <div class="card-rir-header">
        <h5 class="mb-0"><i class="bi bi-funnel"></i> Filtros</h5>
    </div>
    <div class="card-rir-body">
        <form asp-action="Index" method="get">
            <div class="row g-3">
                <!-- Nome -->
                <div class="col-12 col-md-6 col-lg-3">
                    <label class="form-label fw-bold">
                        <i class="bi bi-person"></i> Nome
                    </label>
                    <input type="text" name="filtroNome" class="form-control" 
                           value="@ViewBag.FiltroNome" placeholder="Buscar por nome..." />
                </div>

                <!-- Email -->
                <div class="col-12 col-md-6 col-lg-3">
                    <label class="form-label fw-bold">
                        <i class="bi bi-envelope"></i> Email
                    </label>
                    <input type="text" name="filtroEmail" class="form-control" 
                           value="@ViewBag.FiltroEmail" placeholder="Buscar por email..." />
                </div>

                <!-- Username -->
                <div class="col-12 col-md-6 col-lg-3">
                    <label class="form-label fw-bold">
                        <i class="bi bi-person-circle"></i> Username
                    </label>
                    <input type="text" name="filtroUsername" class="form-control" 
                           value="@ViewBag.FiltroUsername" placeholder="Buscar por username..." />
                </div>

                <!-- Status -->
                <div class="col-12 col-md-6 col-lg-2">
                    <label class="form-label fw-bold">
                        <i class="bi bi-toggle-on"></i> Status
                    </label>
                    <select name="filtroAtivo" class="form-select">
                        <option value="">Todos</option>
                        <option value="true" selected="@(ViewBag.FiltroAtivo == true)">Ativo</option>
                        <option value="false" selected="@(ViewBag.FiltroAtivo == false)">Inativo</option>
                    </select>
                </div>

                <!-- Perfil -->
                <div class="col-12 col-md-6 col-lg-1">
                    <label class="form-label fw-bold">
                        <i class="bi bi-shield"></i> Perfil
                    </label>
                    <select name="filtroAdmin" class="form-select">
                        <option value="">Todos</option>
                        <option value="true" selected="@(ViewBag.FiltroAdmin == true)">Admin</option>
                        <option value="false" selected="@(ViewBag.FiltroAdmin == false)">Funcionário</option>
                    </select>
                </div>
            </div>

            <div class="mt-3 d-flex gap-2">
                <button type="submit" class="btn-rir-primary">
                    <i class="bi bi-search"></i> Filtrar
                </button>
                <a asp-action="Index" class="btn-rir-secondary">
                    <i class="bi bi-x-circle"></i> Limpar Filtros
                </a>
            </div>
        </form>
    </div>
</div>

<!-- CONTEÚDO -->
@if (Model.Any())
{
    <!-- TABELA DESKTOP -->
    <div class="table-responsive-rir desktop-only">
        <table class="table-rir">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Username</th>
                    <th>E-mail</th>
                    <th>CPF</th>
                    <th>Tipo</th>
                    <th>Status</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@item.Nome</strong></td>
                        <td><code>@item.Username</code></td>
                        <td>@item.Email</td>
                        <td>@item.CPF</td>
                        <td>
                            @if (item.IsAdmin)
                            {
                                <span class="badge-rir badge-rir-danger">
                                    <i class="bi bi-shield-fill-check"></i> Admin
                                </span>
                            }
                            else
                            {
                                <span class="badge-rir badge-rir-info">
                                    <i class="bi bi-person-fill"></i> Funcionário
                                </span>
                            }
                        </td>
                        <td>
                            @if (item.Ativo)
                            {
                                <span class="badge-rir badge-rir-success">
                                    <i class="bi bi-check-circle"></i> Ativo
                                </span>
                            }
                            else
                            {
                                <span class="badge-rir badge-rir-danger">
                                    <i class="bi bi-x-circle"></i> Inativo
                                </span>
                            }
                        </td>
                        <td>
                            <div class="table-actions">
                                <a asp-action="Details" asp-route-id="@item.Id" 
                                   class="btn btn-sm btn-rir-secondary" 
                                   title="Detalhes">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" 
                                   class="btn btn-sm btn-rir-primary" 
                                   title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" 
                                   class="btn btn-sm btn-rir-danger" 
                                   title="Deletar">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- CARDS MOBILE -->
    <div class="mobile-only">
        @foreach (var item in Model)
        {
            <div class="client-card-mobile">
                <div class="client-card-header">
                    <div class="client-card-name">
                        <i class="bi bi-person-circle"></i>
                        <strong>@item.Nome</strong>
                    </div>
                    <div>
                        @if (item.Ativo)
                        {
                            <span class="badge-rir badge-rir-success">
                                <i class="bi bi-check-circle"></i> Ativo
                            </span>
                        }
                        else
                        {
                            <span class="badge-rir badge-rir-danger">
                                <i class="bi bi-x-circle"></i> Inativo
                            </span>
                        }
                    </div>
                </div>

                <div class="client-card-body">
                    <div class="client-info-row">
                        <i class="bi bi-person-badge"></i>
                        <span><code>@item.Username</code></span>
                    </div>
                    <div class="client-info-row">
                        <i class="bi bi-envelope"></i>
                        <span>@item.Email</span>
                    </div>
                    <div class="client-info-row">
                        <i class="bi bi-card-text"></i>
                        <span>@item.CPF</span>
                    </div>
                    <div class="client-info-row">
                        <i class="bi bi-shield"></i>
                        @if (item.IsAdmin)
                        {
                            <span class="badge-rir badge-rir-danger">
                                <i class="bi bi-shield-fill-check"></i> Administrador
                            </span>
                        }
                        else
                        {
                            <span class="badge-rir badge-rir-info">
                                <i class="bi bi-person-fill"></i> Funcionário
                            </span>
                        }
                    </div>
                </div>

                <div class="client-card-actions">
                    <a asp-action="Details" asp-route-id="@item.Id" 
                       class="btn btn-sm btn-rir-secondary">
                        <i class="bi bi-eye"></i> Ver
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.Id" 
                       class="btn btn-sm btn-rir-primary">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" 
                       class="btn btn-sm btn-rir-danger">
                        <i class="bi bi-trash"></i> Excluir
                    </a>
                </div>
            </div>
        }
    </div>

    <!-- ESTATÍSTICAS -->
    <div class="row mt-4 g-3">
        <div class="col-6 col-md-3">
            <div class="card-rir">
                <div class="card-rir-body text-center">
                    <h6 class="text-muted mb-2">Total</h6>
                    <h2 class="mb-0">@Model.Count()</h2>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card-rir">
                <div class="card-rir-body text-center">
                    <h6 class="text-muted mb-2">Ativos</h6>
                    <h2 class="mb-0 text-success">@Model.Count(f => f.Ativo)</h2>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card-rir">
                <div class="card-rir-body text-center">
                    <h6 class="text-muted mb-2">Admins</h6>
                    <h2 class="mb-0 text-danger">@Model.Count(f => f.IsAdmin)</h2>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card-rir">
                <div class="card-rir-body text-center">
                    <h6 class="text-muted mb-2">Inativos</h6>
                    <h2 class="mb-0 text-warning">@Model.Count(f => !f.Ativo)</h2>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="card-rir">
        <div class="card-rir-body">
            <div class="table-empty">
                <i class="bi bi-inbox"></i>
                <h4>Nenhum funcionário cadastrado</h4>
                <p>
                    <a asp-action="Create" class="btn-rir-primary">
                        <i class="bi bi-plus-circle"></i> Cadastrar Primeiro Funcionário
                    </a>
                </p>
            </div>
        </div>
    </div>
}
