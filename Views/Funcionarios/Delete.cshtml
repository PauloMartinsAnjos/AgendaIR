@model AgendaIR.Models.Funcionario

@{
    ViewData["Title"] = "Excluir Funcionário";
}

<!-- PAGE HEADER -->
<div class="page-header-rir">
    <div>
        <h2><i class="bi bi-exclamation-triangle-fill text-danger"></i> Excluir Funcionário</h2>
        <p>Você tem certeza que deseja excluir este funcionário?</p>
    </div>
</div>

<!-- MENSAGENS -->
@if (TempData["Error"] != null)
{
    <div class="alert-rir alert-rir-danger">
        <i class="bi bi-exclamation-triangle-fill" style="font-size: 1.5rem;"></i>
        <div>
            <strong>Erro!</strong><br />
            @TempData["Error"]
        </div>
    </div>
}

<div class="row justify-content-center">
    <div class="col-12 col-lg-8">
        <!-- Aviso -->
        <div class="alert-rir alert-rir-danger text-center mb-4">
            <i class="bi bi-exclamation-triangle-fill" style="font-size: 3rem;"></i>
            <div>
                <h4 class="mt-3">Atenção! Você está prestes a excluir um funcionário</h4>
                <p class="mb-0">Esta ação não pode ser desfeita. Todos os dados serão removidos permanentemente.</p>
            </div>
        </div>

        <!-- Dados do Funcionário -->
        <div class="card-rir mb-4">
            <div class="card-rir-header">
                <h5 class="mb-0"><i class="bi bi-exclamation-octagon-fill"></i> Confirmar Exclusão</h5>
            </div>
            <div class="card-rir-body">
                <div class="alert-rir alert-rir-info mb-4">
                    <i class="bi bi-info-circle" style="font-size: 1.5rem;"></i>
                    <div>
                        <strong>Atenção!</strong> Esta ação não pode ser desfeita. Todos os dados do funcionário serão removidos permanentemente.
                    </div>
                </div>

                <h5 class="mb-3"><i class="bi bi-person-circle"></i> Dados do Funcionário</h5>

                <div class="row mb-3">
                    <div class="col-12 col-md-6">
                        <label class="text-muted small">Nome Completo</label>
                        <p class="h6">@Model.Nome</p>
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="text-muted small">CPF</label>
                        <p class="h6">@Model.CPF</p>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-12 col-md-6">
                        <label class="text-muted small">E-mail</label>
                        <p class="h6">@Model.Email</p>
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="text-muted small">Username</label>
                        <p class="h6"><code>@Model.Username</code></p>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-12 col-md-6">
                        <label class="text-muted small">Tipo de Conta</label>
                        <p class="h6">
                            @if (Model.IsAdmin)
                            {
                                <span class="badge-rir badge-rir-danger">
                                    <i class="bi bi-shield-fill-check"></i> Administrador
                                </span>
                            }
                            else
                            {
                                <span class="badge-rir badge-rir-info">
                                    <i class="bi bi-person-fill"></i> Funcionário
                                </span>
                            }
                        </p>
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="text-muted small">Status</label>
                        <p class="h6">
                            @if (Model.Ativo)
                            {
                                <span class="badge-rir badge-rir-success">
                                    <i class="bi bi-check-circle-fill"></i> Ativo
                                </span>
                            }
                            else
                            {
                                <span class="badge-rir badge-rir-danger">
                                    <i class="bi bi-x-circle-fill"></i> Inativo
                                </span>
                            }
                        </p>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-12">
                        <label class="text-muted small">Data de Criação</label>
                        <p class="h6">@Model.DataCriacao.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                </div>

                <hr class="my-4" />

                <h5 class="mb-3"><i class="bi bi-diagram-3-fill"></i> Relacionamentos</h5>

                <div class="row mb-3 g-3">
                    <div class="col-6">
                        <div class="card-rir text-center">
                            <div class="card-rir-body">
                                <h3 class="@(Model.Clientes.Count > 0 ? "text-danger" : "text-success") mb-2">
                                    @Model.Clientes.Count
                                </h3>
                                <p class="mb-0">Clientes Associados</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="card-rir text-center">
                            <div class="card-rir-body">
                                <h3 class="@(Model.Agendamentos.Count > 0 ? "text-danger" : "text-success") mb-2">
                                    @Model.Agendamentos.Count
                                </h3>
                                <p class="mb-0">Agendamentos</p>
                            </div>
                        </div>
                    </div>
                </div>

                @if (Model.Clientes.Count > 0 || Model.Agendamentos.Count > 0)
                {
                    <div class="alert-rir alert-rir-danger">
                        <i class="bi bi-exclamation-octagon" style="font-size: 1.5rem;"></i>
                        <div>
                            <strong>Não é possível excluir!</strong> Este funcionário possui clientes ou agendamentos associados. 
                            Recomendamos desativar o funcionário ao invés de excluí-lo.
                        </div>
                    </div>
                }

                <hr class="my-4" />

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex flex-column flex-md-row justify-content-between gap-2">
                        <a asp-action="Index" class="btn-rir-secondary">
                            <i class="bi bi-arrow-left"></i> Cancelar
                        </a>
                        
                        @if (Model.Clientes.Count == 0 && Model.Agendamentos.Count == 0)
                        {
                            <button type="submit" class="btn-rir-danger">
                                <i class="bi bi-trash-fill"></i> Sim, Excluir Funcionário
                            </button>
                        }
                        else
                        {
                            <button type="button" class="btn-rir-danger" disabled>
                                <i class="bi bi-trash-fill"></i> Excluir não permitido
                            </button>
                        }
                    </div>
                </form>
            </div>
        </div>

        <!-- Sugestão de alternativa -->
        @if (Model.Clientes.Count > 0 || Model.Agendamentos.Count > 0)
        {
            <div class="card-rir">
                <div class="card-rir-body">
                    <h6 class="mb-2"><i class="bi bi-lightbulb-fill"></i> Sugestão</h6>
                    <p class="mb-3">
                        Em vez de excluir este funcionário, você pode <strong>desativá-lo</strong>. 
                        Funcionários inativos não podem fazer login no sistema, mas seus dados históricos 
                        (clientes e agendamentos) são preservados.
                    </p>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-rir-secondary">
                        <i class="bi bi-pencil-fill"></i> Editar e Desativar Funcionário
                    </a>
                </div>
            </div>
        }
    </div>
</div>
