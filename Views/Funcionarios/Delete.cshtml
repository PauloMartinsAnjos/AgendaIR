@model AgendaIR.Models.Funcionario

@{
    ViewData["Title"] = "Excluir Funcionário";
}

<!-- Breadcrumbs -->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Início</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Funcionários</a></li>
        <li class="breadcrumb-item active" aria-current="page">Excluir</li>
    </ol>
</nav>

<div class="container">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1 class="h2 text-danger"><i class="bi bi-exclamation-triangle-fill"></i> Excluir Funcionário</h1>
            <p class="text-muted">Você tem certeza que deseja excluir este funcionário?</p>
        </div>
    </div>

    <!-- Mensagens de erro -->
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="bi bi-exclamation-octagon-fill"></i> Confirmar Exclusão</h5>
                </div>
                <div class="card-body">
                    <!-- Aviso -->
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-triangle-fill"></i> 
                        <strong>Atenção!</strong> Esta ação não pode ser desfeita. Todos os dados do funcionário serão removidos permanentemente.
                    </div>

                    <!-- Dados do Funcionário -->
                    <h5 class="card-title mb-3">
                        <i class="bi bi-person-circle"></i> Dados do Funcionário
                    </h5>

                    <dl class="row">
                        <dt class="col-sm-4">Nome Completo:</dt>
                        <dd class="col-sm-8">@Model.Nome</dd>

                        <dt class="col-sm-4">E-mail:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Username:</dt>
                        <dd class="col-sm-8"><code>@Model.Username</code></dd>

                        <dt class="col-sm-4">CPF:</dt>
                        <dd class="col-sm-8">@Model.CPF</dd>

                        <dt class="col-sm-4">Tipo de Conta:</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsAdmin)
                            {
                                <span class="badge bg-danger">
                                    <i class="bi bi-shield-fill-check"></i> Administrador
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">
                                    <i class="bi bi-person-fill"></i> Funcionário
                                </span>
                            }
                        </dd>

                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Ativo)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle-fill"></i> Ativo
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">
                                    <i class="bi bi-x-circle-fill"></i> Inativo
                                </span>
                            }
                        </dd>

                        <dt class="col-sm-4">Data de Criação:</dt>
                        <dd class="col-sm-8">@Model.DataCriacao.ToString("dd/MM/yyyy HH:mm")</dd>
                    </dl>

                    <hr class="my-4" />

                    <!-- Informações de Relacionamentos -->
                    <h5 class="card-title mb-3">
                        <i class="bi bi-diagram-3-fill"></i> Relacionamentos
                    </h5>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="card text-center">
                                <div class="card-body">
                                    <h3 class="@(Model.Clientes.Count > 0 ? "text-danger" : "text-success")">
                                        @Model.Clientes.Count
                                    </h3>
                                    <p class="card-text mb-0">Clientes Associados</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card text-center">
                                <div class="card-body">
                                    <h3 class="@(Model.Agendamentos.Count > 0 ? "text-danger" : "text-success")">
                                        @Model.Agendamentos.Count
                                    </h3>
                                    <p class="card-text mb-0">Agendamentos</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (Model.Clientes.Count > 0 || Model.Agendamentos.Count > 0)
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-octagon-fill"></i> 
                            <strong>Não é possível excluir!</strong> Este funcionário possui clientes ou agendamentos associados. 
                            Recomendamos desativar o funcionário ao invés de excluí-lo.
                        </div>
                    }

                    <hr class="my-4" />

                    <!-- Botões de Ação -->
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            
                            @if (Model.Clientes.Count == 0 && Model.Agendamentos.Count == 0)
                            {
                                <button type="submit" class="btn btn-danger btn-lg">
                                    <i class="bi bi-trash-fill"></i> Sim, Excluir Funcionário
                                </button>
                            }
                            else
                            {
                                <button type="button" class="btn btn-danger btn-lg" disabled>
                                    <i class="bi bi-trash-fill"></i> Excluir não permitido
                                </button>
                            }
                        </div>
                    </form>
                </div>
            </div>

            <!-- Sugestão de alternativa -->
            @if (Model.Clientes.Count > 0 || Model.Agendamentos.Count > 0)
            {
                <div class="card shadow-sm mt-4 border-info">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="bi bi-lightbulb-fill"></i> Sugestão</h5>
                    </div>
                    <div class="card-body">
                        <p>
                            Em vez de excluir este funcionário, você pode <strong>desativá-lo</strong>. 
                            Funcionários inativos não podem fazer login no sistema, mas seus dados históricos 
                            (clientes e agendamentos) são preservados.
                        </p>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">
                            <i class="bi bi-pencil-fill"></i> Editar e Desativar Funcionário
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
