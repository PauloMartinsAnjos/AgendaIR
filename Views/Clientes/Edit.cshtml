@model AgendaIR.Models.ViewModels.ClienteEditViewModel

@{
    ViewData["Title"] = "Editar Cliente";
    var isAdmin = User.FindFirst("IsAdmin")?.Value == "True";
}

<!-- PAGE HEADER -->
<div class="page-header-rir">
    <div>
        <h2><i class="bi bi-pencil-square"></i> Editar Cliente</h2>
        <p>Atualize as informa√ß√µes do cliente</p>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-12 col-lg-10">
        <div class="card-rir">
            <div class="card-rir-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert-rir alert-rir-danger" role="alert"></div>
                    <input type="hidden" asp-for="Id" />

                    @* Nome *@
                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label fw-bold">
                            <i class="bi bi-person"></i> Nome Completo
                        </label>
                        <input asp-for="Nome" class="form-control" placeholder="Ex: Jo√£o da Silva" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="row">
                        @* Email *@
                        <div class="col-12 col-md-6 mb-3">
                            <label asp-for="Email" class="form-label fw-bold">
                                <i class="bi bi-envelope"></i> Email
                            </label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="Ex: joao@email.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        @* Telefone *@
                        <div class="col-12 col-md-6 mb-3">
                            <label asp-for="Telefone" class="form-label fw-bold">
                                <i class="bi bi-whatsapp"></i> Telefone/WhatsApp
                            </label>
                            <input asp-for="Telefone" 
                                   class="form-control" 
                                   placeholder="Ex: (11) 98765-4321"
                                   id="telefone" />
                            <span asp-validation-for="Telefone" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- ‚úÖ NOVOS CAMPOS - TELEFONES ADICIONAIS -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TelefoneResidencial" class="form-label">
                                <i class="bi bi-telephone"></i> Telefone Residencial
                            </label>
                            <input asp-for="TelefoneResidencial" 
                                   class="form-control" 
                                   placeholder="(00) 0000-0000" 
                                   maxlength="20"
                                   id="telefoneResidencial" />
                            <span asp-validation-for="TelefoneResidencial" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="TelefoneComercial" class="form-label">
                                <i class="bi bi-telephone-outbound"></i> Telefone Comercial
                            </label>
                            <input asp-for="TelefoneComercial" 
                                   class="form-control" 
                                   placeholder="(00) 0000-0000" 
                                   maxlength="20"
                                   id="telefoneComercial" />
                            <span asp-validation-for="TelefoneComercial" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        @* CPF *@
                        <div class="col-12 col-md-6 mb-3">
                            <label asp-for="CPF" class="form-label fw-bold">
                                <i class="bi bi-card-text"></i> CPF
                            </label>
                            <input asp-for="CPF" 
                                   class="form-control" 
                                   placeholder="Ex: 123.456.789-00"
                                   id="cpf" />
                            <span asp-validation-for="CPF" class="text-danger"></span>
                        </div>

                        @* Funcion√°rio Respons√°vel *@
                        <div class="col-12 col-md-6 mb-3">
                            <label class="form-label fw-bold">
                                <i class="bi bi-person-badge"></i> Funcion√°rio Respons√°vel
                            </label>
                            
                            <input type="text" class="form-control" value="@Model.FuncionarioNome" readonly disabled />
                            <input asp-for="FuncionarioId" type="hidden" />
                            
                            <small class="form-text text-muted">
                                <i class="bi bi-lock"></i> O funcion√°rio respons√°vel n√£o pode ser alterado ap√≥s a cria√ß√£o
                            </small>
                        </div>
                    </div>

                    @* Funcion√°rio Respons√°vel Principal *@
                    <div class="mb-3">
                        <label asp-for="FuncionarioResponsavelId" class="form-label">
                            <i class="bi bi-person-badge"></i> Funcion√°rio Respons√°vel Principal
                        </label>
                        <select asp-for="FuncionarioResponsavelId" class="form-select">
                            <option value="">-- Selecione --</option>
                            @if (ViewBag.Funcionarios != null)
                            {
                                var funcionarios = ViewBag.Funcionarios as IEnumerable<AgendaIR.Models.Funcionario>;
                                if (funcionarios != null)
                                {
                                    foreach (var func in funcionarios)
                                    {
                                        <option value="@func.Id">@func.Nome</option>
                                    }
                                }
                            }
                        </select>
                        <small class="text-muted">Este funcion√°rio ser√° o respons√°vel principal pelo cliente</small>
                    </div>

                    <!-- ‚úÖ NOVO CAMPO - COR DA PASTA -->
                    <div class="mb-3">
                        <label asp-for="CorDaPasta" class="form-label">
                            <i class="bi bi-folder"></i> Cor da Pasta (F√≠sica no Escrit√≥rio)
                        </label>
                        <select asp-for="CorDaPasta" class="form-select">
                            <option value="">Nenhuma / N√£o informada</option>
                            <option value="Verde">üü¢ Verde</option>
                            <option value="Azul">üîµ Azul</option>
                            <option value="Amarelo">üü° Amarelo</option>
                            <option value="Vermelho">üî¥ Vermelho</option>
                            <option value="Rosa">üå∏ Rosa</option>
                            <option value="Roxo">üü£ Roxo</option>
                            <option value="Laranja">üü† Laranja</option>
                            <option value="Preto">‚ö´ Preto</option>
                            <option value="Branco">‚ö™ Branco</option>
                            <option value="Marrom">üü§ Marrom</option>
                            <option value="Cinza">‚ö™ Cinza</option>
                        </select>
                        <small class="form-text text-muted">Cor f√≠sica da pasta do cliente no arquivo</small>
                        <span asp-validation-for="CorDaPasta" class="text-danger"></span>
                    </div>

                    <!-- ‚úÖ NOVO CAMPO - OBSERVA√á√ïES -->
                    <div class="mb-3">
                        <label asp-for="Observacoes" class="form-label">
                            <i class="bi bi-card-text"></i> Observa√ß√µes
                        </label>
                        <textarea asp-for="Observacoes" 
                                  class="form-control" 
                                  rows="4" 
                                  maxlength="2000"
                                  placeholder="Anota√ß√µes adicionais sobre o cliente..."
                                  id="observacoesTextarea"></textarea>
                        <div class="d-flex justify-content-between">
                            <span asp-validation-for="Observacoes" class="text-danger"></span>
                            <small class="form-text text-muted">
                                <span id="charCount">0</span> / 2000 caracteres
                            </small>
                        </div>
                    </div>

                    @* Status Ativo *@
                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input asp-for="Ativo" class="form-check-input" type="checkbox" id="ativoSwitch" />
                            <label class="form-check-label fw-bold" for="ativoSwitch">
                                <i class="bi bi-toggle-on"></i> Cliente Ativo
                            </label>
                        </div>
                        <small class="form-text text-muted">
                            Clientes inativos n√£o poder√£o acessar o sistema usando o Magic Link
                        </small>
                    </div>

                    @* Bot√µes *@
                    <div class="d-flex flex-column flex-md-row justify-content-between gap-2">
                        <a asp-action="Index" class="btn-rir-secondary">
                            <i class="bi bi-arrow-left"></i> Cancelar
                        </a>
                        <button type="submit" class="btn-rir-primary">
                            <i class="bi bi-save"></i> Salvar Altera√ß√µes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // M√°scara para CPF
        document.getElementById('cpf').addEventListener('input', function (e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length <= 11) {
                value = value.replace(/(\d{3})(\d)/, '$1.$2');
                value = value.replace(/(\d{3})(\d)/, '$1.$2');
                value = value.replace(/(\d{3})(\d{1,2})$/, '$1-$2');
            }
            e.target.value = value;
        });

        // M√°scara para telefone
        document.getElementById('telefone').addEventListener('input', function (e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length <= 11) {
                value = value.replace(/^(\d{2})(\d)/g, '($1) $2');
                value = value.replace(/(\d)(\d{4})$/, '$1-$2');
            }
            e.target.value = value;
        });

        // M√°scara para telefone residencial
        const telefoneResidencial = document.getElementById('telefoneResidencial');
        if (telefoneResidencial) {
            telefoneResidencial.addEventListener('input', function (e) {
                let value = e.target.value.replace(/\D/g, '');
                if (value.length <= 11) {
                    value = value.replace(/^(\d{2})(\d)/g, '($1) $2');
                    value = value.replace(/(\d)(\d{4})$/, '$1-$2');
                }
                e.target.value = value;
            });
        }

        // M√°scara para telefone comercial
        const telefoneComercial = document.getElementById('telefoneComercial');
        if (telefoneComercial) {
            telefoneComercial.addEventListener('input', function (e) {
                let value = e.target.value.replace(/\D/g, '');
                if (value.length <= 11) {
                    value = value.replace(/^(\d{2})(\d)/g, '($1) $2');
                    value = value.replace(/(\d)(\d{4})$/, '$1-$2');
                }
                e.target.value = value;
            });
        }

        // Contador de caracteres para Observa√ß√µes
        const textarea = document.getElementById('observacoesTextarea');
        const charCount = document.getElementById('charCount');
        
        if (textarea && charCount) {
            // Initialize with current value
            charCount.textContent = textarea.value.length;
            
            textarea.addEventListener('input', function() {
                charCount.textContent = this.value.length;
            });
        }
    </script>
}