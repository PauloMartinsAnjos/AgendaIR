@model AgendaIR.Models.ViewModels.ClienteEditViewModel

@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil-square"></i> Editar Cliente
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="FuncionarioId" />
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        @* Nome *@
                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label">
                                <i class="bi bi-person"></i> Nome Completo
                            </label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        @* Email *@
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="bi bi-envelope"></i> Email
                            </label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        @* Telefone *@
                        <div class="mb-3">
                            <label asp-for="Telefone" class="form-label">
                                <i class="bi bi-whatsapp"></i> Telefone/WhatsApp
                            </label>
                            <input asp-for="Telefone" 
                                   class="form-control" 
                                   id="telefone" />
                            <span asp-validation-for="Telefone" class="text-danger"></span>
                        </div>

                        @* CPF *@
                        <div class="mb-3">
                            <label asp-for="CPF" class="form-label">
                                <i class="bi bi-card-text"></i> CPF
                            </label>
                            <input asp-for="CPF" 
                                   class="form-control" 
                                   id="cpf" />
                            <span asp-validation-for="CPF" class="text-danger"></span>
                        </div>

                        @* Status *@
                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="Ativo" 
                                       class="form-check-input" 
                                       type="checkbox" 
                                       id="ativoSwitch">
                                <label class="form-check-label" for="ativoSwitch">
                                    <i class="bi bi-toggle-on"></i> Cliente Ativo
                                </label>
                            </div>
                            <div class="form-text">
                                Clientes inativos não podem fazer login no sistema
                            </div>
                        </div>

                        <hr class="my-4" />

                        @* Funcionário Responsável (READONLY) *@
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-person-badge"></i> Funcionário Responsável
                            </label>
                            <input type="text" 
                                   class="form-control" 
                                   value="@Model.FuncionarioNome" 
                                   readonly 
                                   disabled />
                            <div class="form-text text-danger">
                                <i class="bi bi-lock-fill"></i> 
                                <strong>O funcionário responsável não pode ser alterado após a criação do cliente</strong>
                            </div>
                        </div>

                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i>
                            <strong>Atenção:</strong> O funcionário responsável e o Magic Link não podem ser alterados.
                            Se necessário, crie um novo cliente.
                        </div>

                        @* Botões *@
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-save"></i> Salvar Alterações
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            @* Card com informações adicionais *@
            <div class="card shadow mt-3">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="bi bi-info-circle"></i> Informações do Sistema
                    </h6>
                </div>
                <div class="card-body">
                    <p class="mb-1">
                        <strong>ID do Cliente:</strong> @Model.Id
                    </p>
                    <p class="mb-0">
                        <strong>Magic Link:</strong> 
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-link-45deg"></i> Ver Link de Acesso
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Máscara para CPF
        document.getElementById('cpf').addEventListener('input', function (e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length <= 11) {
                value = value.replace(/(\d{3})(\d)/, '$1.$2');
                value = value.replace(/(\d{3})(\d)/, '$1.$2');
                value = value.replace(/(\d{3})(\d{1,2})$/, '$1-$2');
            }
            e.target.value = value;
        });

        // Máscara para telefone
        document.getElementById('telefone').addEventListener('input', function (e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length <= 11) {
                value = value.replace(/^(\d{2})(\d)/g, '($1) $2');
                value = value.replace(/(\d)(\d{4})$/, '$1-$2');
            }
            e.target.value = value;
        });
    </script>
}
