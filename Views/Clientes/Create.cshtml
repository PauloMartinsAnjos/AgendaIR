@model AgendaIR.Models.ViewModels.ClienteCreateViewModel

@{
    ViewData["Title"] = "Novo Cliente";
    var isAdmin = User.FindFirst("IsAdmin")?.Value == "True";
}

<!-- PAGE HEADER -->
<div class="page-header-rir">
    <div>
        <h2><i class="bi bi-person-plus-fill"></i> Cadastrar Novo Cliente</h2>
        <p>Preencha os dados do novo cliente</p>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-12 col-lg-10">
        <div class="card-rir">
            <div class="card-rir-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert-rir alert-rir-danger" role="alert"></div>

                    @* Nome *@
                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label fw-bold">
                            <i class="bi bi-person"></i> Nome Completo
                        </label>
                        <input asp-for="Nome" class="form-control" placeholder="Ex: JoÃ£o da Silva" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="row">
                        @* Email *@
                        <div class="col-12 col-md-6 mb-3">
                            <label asp-for="Email" class="form-label fw-bold">
                                <i class="bi bi-envelope"></i> Email
                            </label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="Ex: joao@email.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        @* Telefone *@
                        <div class="col-12 col-md-6 mb-3">
                            <label asp-for="Telefone" class="form-label fw-bold">
                                <i class="bi bi-whatsapp"></i> Telefone/WhatsApp
                            </label>
                            <input asp-for="Telefone" 
                                   class="form-control" 
                                   placeholder="Ex: (11) 98765-4321"
                                   id="telefone" />
                            <span asp-validation-for="Telefone" class="text-danger"></span>
                            <small class="form-text text-muted">
                                O link de acesso poderÃ¡ ser enviado diretamente para este WhatsApp
                            </small>
                        </div>
                    </div>

                    <!-- âœ… NOVOS CAMPOS - TELEFONES ADICIONAIS -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TelefoneResidencial" class="form-label">
                                <i class="bi bi-telephone"></i> Telefone Residencial
                            </label>
                            <input asp-for="TelefoneResidencial" 
                                   class="form-control" 
                                   placeholder="(00) 0000-0000" 
                                   maxlength="20"
                                   id="telefoneResidencial" />
                            <span asp-validation-for="TelefoneResidencial" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="TelefoneComercial" class="form-label">
                                <i class="bi bi-telephone-outbound"></i> Telefone Comercial
                            </label>
                            <input asp-for="TelefoneComercial" 
                                   class="form-control" 
                                   placeholder="(00) 0000-0000" 
                                   maxlength="20"
                                   id="telefoneComercial" />
                            <span asp-validation-for="TelefoneComercial" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        @* CPF *@
                        <div class="col-12 col-md-6 mb-3">
                            <label asp-for="CPF" class="form-label fw-bold">
                                <i class="bi bi-card-text"></i> CPF
                            </label>
                            <input asp-for="CPF" 
                                   class="form-control" 
                                   placeholder="Ex: 123.456.789-00"
                                   id="cpf" />
                            <span asp-validation-for="CPF" class="text-danger"></span>
                        </div>

                        @* FuncionÃ¡rio ResponsÃ¡vel *@
                        <div class="col-12 col-md-6 mb-3">
                            <label asp-for="FuncionarioId" class="form-label fw-bold">
                                <i class="bi bi-person-badge"></i> FuncionÃ¡rio ResponsÃ¡vel
                            </label>
                            
                            @if (isAdmin)
                            {
                                @* Admin pode selecionar qualquer funcionÃ¡rio *@
                                <select asp-for="FuncionarioId" class="form-select">
                                    <option value="">Selecione um funcionÃ¡rio</option>
                                    @if (ViewBag.Funcionarios != null)
                                    {
                                        var funcionarios = ViewBag.Funcionarios as IEnumerable<AgendaIR.Models.Funcionario>;
                                        if (funcionarios != null)
                                        {
                                            foreach (var func in funcionarios)
                                            {
                                                <option value="@func.Id">@func.Nome</option>
                                            }
                                        }
                                    }
                                </select>
                                <span asp-validation-for="FuncionarioId" class="text-danger"></span>
                            }
                            else
                            {
                                @* FuncionÃ¡rio vÃª apenas seu nome (readonly) *@
                                var funcionarioNome = User.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value ?? "";
                                <input type="text" class="form-control" value="@funcionarioNome" readonly disabled />
                                <input asp-for="FuncionarioId" type="hidden" />
                                <small class="form-text text-muted">
                                    Este cliente serÃ¡ vinculado a vocÃª
                                </small>
                            }
                        </div>
                    </div>

                    <!-- âœ… NOVO CAMPO - COR DA PASTA -->
                    <div class="mb-3">
                        <label asp-for="CorDaPasta" class="form-label">
                            <i class="bi bi-folder"></i> Cor da Pasta (FÃ­sica no EscritÃ³rio)
                        </label>
                        <select asp-for="CorDaPasta" class="form-select">
                            <option value="">Nenhuma / NÃ£o informada</option>
                            <option value="Verde">ðŸŸ¢ Verde</option>
                            <option value="Azul">ðŸ”µ Azul</option>
                            <option value="Amarelo">ðŸŸ¡ Amarelo</option>
                            <option value="Vermelho">ðŸ”´ Vermelho</option>
                            <option value="Rosa">ðŸŒ¸ Rosa</option>
                            <option value="Roxo">ðŸŸ£ Roxo</option>
                            <option value="Laranja">ðŸŸ  Laranja</option>
                            <option value="Preto">âš« Preto</option>
                            <option value="Branco">âšª Branco</option>
                            <option value="Marrom">ðŸŸ¤ Marrom</option>
                            <option value="Cinza">âšª Cinza</option>
                        </select>
                        <small class="form-text text-muted">Cor fÃ­sica da pasta do cliente no arquivo</small>
                        <span asp-validation-for="CorDaPasta" class="text-danger"></span>
                    </div>

                    <!-- âœ… NOVO CAMPO - OBSERVAÃ‡Ã•ES -->
                    <div class="mb-3">
                        <label asp-for="Observacoes" class="form-label">
                            <i class="bi bi-card-text"></i> ObservaÃ§Ãµes
                        </label>
                        <textarea asp-for="Observacoes" 
                                  class="form-control" 
                                  rows="4" 
                                  maxlength="2000"
                                  placeholder="AnotaÃ§Ãµes adicionais sobre o cliente..."
                                  id="observacoesTextarea"></textarea>
                        <div class="d-flex justify-content-between">
                            <span asp-validation-for="Observacoes" class="text-danger"></span>
                            <small class="form-text text-muted">
                                <span id="charCount">0</span> / 2000 caracteres
                            </small>
                        </div>
                    </div>

                    <div class="alert-rir alert-rir-info mb-3">
                        <i class="bi bi-info-circle" style="font-size: 1.5rem;"></i>
                        <div>
                            <strong>Importante:</strong><br />
                            ApÃ³s criar o cliente, um link mÃ¡gico (Magic Link) serÃ¡ gerado automaticamente.
                            VocÃª poderÃ¡ copiar este link e enviar ao cliente via WhatsApp para que ele acesse o sistema.
                        </div>
                    </div>

                    @* BotÃµes *@
                    <div class="d-flex flex-column flex-md-row justify-content-between gap-2">
                        <a asp-action="Index" class="btn-rir-secondary">
                            <i class="bi bi-arrow-left"></i> Cancelar
                        </a>
                        <button type="submit" class="btn-rir-primary">
                            <i class="bi bi-save"></i> Cadastrar Cliente
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // MÃ¡scara para CPF
        document.getElementById('cpf').addEventListener('input', function (e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length <= 11) {
                value = value.replace(/(\d{3})(\d)/, '$1.$2');
                value = value.replace(/(\d{3})(\d)/, '$1.$2');
                value = value.replace(/(\d{3})(\d{1,2})$/, '$1-$2');
            }
            e.target.value = value;
        });

        // MÃ¡scara para telefone
        document.getElementById('telefone').addEventListener('input', function (e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length <= 11) {
                value = value.replace(/^(\d{2})(\d)/g, '($1) $2');
                value = value.replace(/(\d)(\d{4})$/, '$1-$2');
            }
            e.target.value = value;
        });

        // MÃ¡scara para telefone residencial
        const telefoneResidencial = document.getElementById('telefoneResidencial');
        if (telefoneResidencial) {
            telefoneResidencial.addEventListener('input', function (e) {
                let value = e.target.value.replace(/\D/g, '');
                if (value.length <= 11) {
                    value = value.replace(/^(\d{2})(\d)/g, '($1) $2');
                    value = value.replace(/(\d)(\d{4})$/, '$1-$2');
                }
                e.target.value = value;
            });
        }

        // MÃ¡scara para telefone comercial
        const telefoneComercial = document.getElementById('telefoneComercial');
        if (telefoneComercial) {
            telefoneComercial.addEventListener('input', function (e) {
                let value = e.target.value.replace(/\D/g, '');
                if (value.length <= 11) {
                    value = value.replace(/^(\d{2})(\d)/g, '($1) $2');
                    value = value.replace(/(\d)(\d{4})$/, '$1-$2');
                }
                e.target.value = value;
            });
        }

        // Contador de caracteres para ObservaÃ§Ãµes
        const textarea = document.getElementById('observacoesTextarea');
        const charCount = document.getElementById('charCount');
        
        if (textarea && charCount) {
            textarea.addEventListener('input', function() {
                charCount.textContent = this.value.length;
            });
        }
    </script>
}
