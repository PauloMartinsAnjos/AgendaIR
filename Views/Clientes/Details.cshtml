@model AgendaIR.Models.Cliente

@{
    ViewData["Title"] = "Detalhes do Cliente";
    var magicLink = ViewBag.MagicLink as string ?? "";
    var telefoneNumeros = new string(Model.Telefone.Where(char.IsDigit).ToArray());
    var mensagemWhatsApp = Uri.EscapeDataString($"Olá {Model.Nome}! Aqui está seu link de acesso ao sistema: {magicLink}");
    var whatsappLink = $"https://wa.me/{telefoneNumeros}?text={mensagemWhatsApp}";
}

<!-- PAGE HEADER -->
<div class="page-header-rir">
    <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
        <div>
            <h2><i class="bi bi-person-circle"></i> Detalhes do Cliente</h2>
            <p>Visualize as informações completas do cliente</p>
        </div>
        <div>
            @if (Model.Ativo)
            {
                <span class="badge-rir badge-rir-success">
                    <i class="bi bi-check-circle"></i> Ativo
                </span>
            }
            else
            {
                <span class="badge-rir badge-rir-danger">
                    <i class="bi bi-x-circle"></i> Inativo
                </span>
            }
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-12 col-lg-10">
        <!-- Dados Pessoais -->
        <div class="card-rir mb-4">
            <div class="card-rir-header">
                <h5 class="mb-0">
                    <i class="bi bi-person-vcard"></i> Dados Pessoais
                </h5>
            </div>
            <div class="card-rir-body">
                <div class="row">
                    <div class="col-12 col-md-6 mb-3">
                        <label class="text-muted small">Nome Completo</label>
                        <p class="h5 mb-0">@Model.Nome</p>
                    </div>
                    <div class="col-12 col-md-6 mb-3">
                        <label class="text-muted small">CPF</label>
                        <p class="h5 mb-0">@Model.CPF</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-6 mb-3">
                        <label class="text-muted small">Email</label>
                        <p class="h5 mb-0">
                            <a href="mailto:@Model.Email">
                                <i class="bi bi-envelope"></i> @Model.Email
                            </a>
                        </p>
                    </div>
                    <div class="col-12 col-md-6 mb-3">
                        <label class="text-muted small">Telefone/WhatsApp</label>
                        <p class="h5 mb-0">
                            <i class="bi bi-whatsapp text-success"></i> @Model.Telefone
                        </p>
                    </div>
                </div>

                <!-- ✅ TELEFONES ADICIONAIS -->
                @if (!string.IsNullOrEmpty(Model.TelefoneResidencial) || !string.IsNullOrEmpty(Model.TelefoneComercial))
                {
                    <div class="row">
                        @if (!string.IsNullOrEmpty(Model.TelefoneResidencial))
                        {
                            <div class="col-12 col-md-6 mb-3">
                                <label class="text-muted small">Telefone Residencial</label>
                                <p class="h5 mb-0">
                                    <i class="bi bi-telephone"></i> @Model.TelefoneResidencial
                                </p>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.TelefoneComercial))
                        {
                            <div class="col-12 col-md-6 mb-3">
                                <label class="text-muted small">Telefone Comercial</label>
                                <p class="h5 mb-0">
                                    <i class="bi bi-telephone-outbound"></i> @Model.TelefoneComercial
                                </p>
                            </div>
                        }
                    </div>
                }

                <!-- ✅ COR DA PASTA -->
                @if (!string.IsNullOrEmpty(Model.CorDaPasta))
                {
                    <div class="row">
                        <div class="col-12 mb-3">
                            <label class="text-muted small">Cor da Pasta</label>
                            <p class="h5 mb-0">
                                @{
                                    var corHex = Model.CorDaPasta?.ToLower() switch
                                    {
                                        "verde" => "#28a745",
                                        "azul" => "#007bff",
                                        "amarelo" => "#ffc107",
                                        "vermelho" => "#dc3545",
                                        "rosa" => "#e83e8c",
                                        "roxo" => "#6f42c1",
                                        "laranja" => "#fd7e14",
                                        "preto" => "#343a40",
                                        "branco" => "#f8f9fa",
                                        "marrom" => "#795548",
                                        "cinza" => "#6c757d",
                                        _ => "#6c757d"
                                    };
                                }
                                <span class="badge" style="background-color: @corHex; color: white; padding: 0.5rem 1rem;">
                                    <i class="bi bi-folder"></i> @Model.CorDaPasta
                                </span>
                            </p>
                        </div>
                    </div>
                }

                <!-- ✅ OBSERVAÇÕES -->
                @if (!string.IsNullOrEmpty(Model.Observacoes))
                {
                    <div class="row">
                        <div class="col-12 mb-3">
                            <label class="text-muted small">Observações</label>
                            <div class="alert alert-info mb-0">
                                <i class="bi bi-card-text"></i> @Model.Observacoes
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Informações do Sistema -->
        <div class="card-rir mb-4">
            <div class="card-rir-header">
                <h5 class="mb-0">
                    <i class="bi bi-gear"></i> Informações do Sistema
                </h5>
            </div>
            <div class="card-rir-body">
                <div class="row">
                    <div class="col-12 col-md-6 mb-3">
                        <label class="text-muted small">Funcionário Responsável</label>
                        <p class="h5 mb-0">
                            <span class="badge-rir badge-rir-info">
                                <i class="bi bi-person-badge"></i> @Model.FuncionarioResponsavel?.Nome
                            </span>
                        </p>
                    </div>
                    <div class="col-12 col-md-6 mb-3">
                        <label class="text-muted small">ID do Cliente</label>
                        <p class="h5 mb-0">#@Model.Id</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-6 mb-3">
                        <label class="text-muted small">Data de Cadastro</label>
                        <p class="h5 mb-0">@Model.DataCriacao.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                    <div class="col-12 col-md-6 mb-3">
                        <label class="text-muted small">Token Gerado Em</label>
                        <p class="h5 mb-0">@Model.TokenGeradoEm.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Magic Link -->
        <div class="card-rir mb-4">
            <div class="card-rir-header">
                <h5 class="mb-0">
                    <i class="bi bi-link-45deg"></i> Link de Acesso (Magic Link)
                </h5>
            </div>
            <div class="card-rir-body">
                <div class="alert-rir alert-rir-info mb-3">
                    <i class="bi bi-info-circle" style="font-size: 1.5rem;"></i>
                    <div>
                        Este é o link único que permite ao cliente acessar o sistema sem precisar de senha.
                        <br><strong>Por segurança, o link expira em 8 horas.</strong>
                    </div>
                </div>

                <!-- STATUS DO TOKEN -->
                <div class="mb-3">
                    <label class="text-muted small">Status do Token</label>
                    @if (Model.TokenAtivo && Model.TokenValido())
                    {
                        <div class="alert alert-success mb-0">
                            <i class="bi bi-check-circle-fill"></i>
                            <strong>✅ Ativo</strong><br>
                            Expira em: <strong>@Model.TokenExpiracao?.ToString("dd/MM/yyyy HH:mm")</strong>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning mb-0">
                            <i class="bi bi-clock-history"></i>
                            <strong>⏰ Expirado</strong>
                            @if (Model.TokenExpiracao.HasValue)
                            {
                                <br><span>Expirou em: <strong>@Model.TokenExpiracao?.ToString("dd/MM/yyyy HH:mm")</strong></span>
                            }
                        </div>
                    }
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Link de Acesso:</label>
                    <div class="input-group">
                        <input type="text" 
                               class="form-control" 
                               id="magicLinkInput" 
                               value="@magicLink" 
                               readonly>
                        <button class="btn btn-rir-secondary" 
                                type="button" 
                                id="copyButton"
                                onclick="copyMagicLink()">
                            <i class="bi bi-clipboard"></i> Copiar
                        </button>
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <a href="@whatsappLink" 
                       target="_blank" 
                       class="btn-rir-success">
                        <i class="bi bi-whatsapp"></i> Enviar via WhatsApp
                    </a>
                    
                    <form asp-action="RegenerarToken" asp-route-id="@Model.Id" method="post" class="mb-0">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-warning w-100" onclick="return confirm('Tem certeza? O token anterior será invalidado.')">
                            <i class="bi bi-arrow-clockwise"></i> Gerar Novo Token
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Ações -->
        <div class="card-rir">
            <div class="card-rir-header">
                <h6 class="mb-0">
                    <i class="bi bi-gear-fill"></i> Ações
                </h6>
            </div>
            <div class="card-rir-body">
                <div class="d-flex flex-column flex-md-row justify-content-between gap-2">
                    <a asp-action="Index" class="btn-rir-secondary">
                        <i class="bi bi-arrow-left"></i> Voltar para Lista
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-rir-primary">
                        <i class="bi bi-pencil"></i> Editar Cliente
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn-rir-danger">
                        <i class="bi bi-trash"></i> Deletar Cliente
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function copyMagicLink() {
            const input = document.getElementById('magicLinkInput');
            const button = document.getElementById('copyButton');
            
            input.select();
            input.setSelectionRange(0, 99999);
            
            navigator.clipboard.writeText(input.value).then(function() {
                const originalHTML = button.innerHTML;
                const originalClass = button.className;
                
                button.innerHTML = '<i class="bi bi-check-lg"></i> Copiado!';
                button.classList.remove('btn-rir-secondary');
                button.classList.add('btn-rir-success');
                
                setTimeout(function() {
                    button.innerHTML = originalHTML;
                    button.className = originalClass;
                }, 2000);
            }).catch(function(err) {
                alert('Erro ao copiar o link: ' + err);
            });
        }
    </script>
}
