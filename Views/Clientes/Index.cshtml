@model IEnumerable<AgendaIR.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
    var isAdmin = ViewBag.IsAdmin ?? false;
    var baseUrl = ViewBag.BaseUrl as string ?? "";
}

<!-- PAGE HEADER -->
<div class="page-header-rir">
    <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
        <div>
            <h2><i class="bi bi-people-fill"></i> Meus Clientes</h2>
            <p>Gerencie os clientes e seus links de acesso</p>
        </div>
        <a asp-action="Create" class="btn-rir-primary">
            <i class="bi bi-plus-circle"></i> Novo Cliente
        </a>
    </div>
</div>

<!-- MENSAGENS -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert-rir alert-rir-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert-rir alert-rir-success">
        <i class="bi bi-check-circle-fill" style="font-size: 1.5rem;"></i>
        <div>
            <strong>Sucesso!</strong><br />
            @TempData["Success"]
        </div>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert-rir alert-rir-danger">
        <i class="bi bi-exclamation-triangle-fill" style="font-size: 1.5rem;"></i>
        <div>
            <strong>Erro!</strong><br />
            @TempData["Error"]
        </div>
    </div>
}

@* FILTROS AVANÇADOS *@
<div class="card-rir mb-4">
    <div class="card-rir-header">
        <h5 class="mb-0"><i class="bi bi-funnel"></i> Filtros de Busca</h5>
    </div>
    <div class="card-rir-body">
        <form asp-action="Index" method="get">
            <div class="row g-3">
                @* Nome *@
                <div class="col-12 col-md-6 col-lg-3">
                    <label class="form-label fw-bold">
                        <i class="bi bi-person"></i> Nome
                    </label>
                    <input type="text" name="filtroNome" class="form-control" 
                           value="@ViewBag.FiltroNome" placeholder="Buscar por nome..." />
                </div>

                @* Email *@
                <div class="col-12 col-md-6 col-lg-3">
                    <label class="form-label fw-bold">
                        <i class="bi bi-envelope"></i> Email
                    </label>
                    <input type="text" name="filtroEmail" class="form-control" 
                           value="@ViewBag.FiltroEmail" placeholder="Buscar por email..." />
                </div>

                @* Telefone *@
                <div class="col-12 col-md-6 col-lg-3">
                    <label class="form-label fw-bold">
                        <i class="bi bi-telephone"></i> Telefone
                    </label>
                    <input type="text" name="filtroTelefone" class="form-control" 
                           value="@ViewBag.FiltroTelefone" placeholder="Buscar por telefone..." />
                </div>

                @* CPF *@
                <div class="col-12 col-md-6 col-lg-3">
                    <label class="form-label fw-bold">
                        <i class="bi bi-card-text"></i> CPF
                    </label>
                    <input type="text" name="filtroCPF" class="form-control" 
                           value="@ViewBag.FiltroCPF" placeholder="Buscar por CPF..." />
                </div>

                @* Funcionário Responsável *@
                <div class="col-12 col-md-6 col-lg-4">
                    <label class="form-label fw-bold">
                        <i class="bi bi-person-badge"></i> Funcionário Responsável
                    </label>
                    @if (isAdmin)
                    {
                        <select name="filtroFuncionarioId" class="form-select">
                            <option value="">Todos os Funcionários</option>
                            @{
                                var funcionarios = ViewBag.Funcionarios as IEnumerable<AgendaIR.Models.Funcionario> ?? Enumerable.Empty<AgendaIR.Models.Funcionario>();
                            }
                            @foreach (var func in funcionarios)
                            {
                                <option value="@func.Id" selected="@(ViewBag.FiltroFuncionarioId == func.Id)">
                                    @func.Nome
                                </option>
                            }
                        </select>
                    }
                    else
                    {
                        <input type="text" class="form-control" value="@ViewBag.FuncionarioLogadoNome" readonly style="background-color: #f8f9fa;" />
                        <input type="hidden" name="filtroFuncionarioId" value="@ViewBag.FuncionarioLogadoId" />
                    }
                </div>
            </div>

            <div class="mt-3 d-flex gap-2">
                <button type="submit" class="btn-rir-primary">
                    <i class="bi bi-search"></i> Filtrar
                </button>
                <a asp-action="Index" class="btn-rir-secondary">
                    <i class="bi bi-x-circle"></i> Limpar Filtros
                </a>
            </div>
        </form>
    </div>
</div>

@* Contador de Resultados *@
<div class="alert alert-info mb-3">
    <i class="bi bi-info-circle"></i> 
    <strong>@Model.Count()</strong> cliente(s) encontrado(s)
</div>

<!-- CONTEÚDO -->
@if (Model.Any())
{
    <!-- ✅ TABELA DESKTOP -->
    <div class="table-responsive-rir desktop-only">
        <table class="table-rir">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Telefone</th>
                    <th>CPF</th>
                    @if (isAdmin)
                    {
                        <th>Funcionário</th>
                    }
                    <th>Status</th>
                    <th>Magic Link</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cliente in Model)
                {
                    var magicLink = $"{baseUrl}/Auth/LoginMagic?token={cliente.MagicToken}";
                    var copyId = $"magicLink{cliente.Id}";

                    <tr>
                        <td>
                            <strong>@cliente.Nome</strong>
                            @if (!string.IsNullOrEmpty(cliente.CorDaPasta))
                            {
                                var corHex = cliente.CorDaPasta.ToLower() switch
                                {
                                    "verde" => "#28a745",
                                    "azul" => "#007bff",
                                    "amarelo" => "#ffc107",
                                    "vermelho" => "#dc3545",
                                    "rosa" => "#e83e8c",
                                    "roxo" => "#6f42c1",
                                    "laranja" => "#fd7e14",
                                    "preto" => "#343a40",
                                    "branco" => "#f8f9fa",
                                    "marrom" => "#795548",
                                    "cinza" => "#6c757d",
                                    _ => "#6c757d"
                                };
                                <span class="badge ms-2" 
                                      style="background-color: @corHex; color: white; font-size: 0.7rem;"
                                      title="Pasta física: @cliente.CorDaPasta">
                                    📁 @cliente.CorDaPasta
                                </span>
                            }
                        </td>
                        <td>@cliente.Email</td>
                        <td>@cliente.Telefone</td>
                        <td>@cliente.CPF</td>
                        @if (isAdmin)
                        {
                            <td>
                                <span class="badge-rir badge-rir-info">
                                    <i class="bi bi-person"></i>
                                    @(cliente.FuncionarioResponsavel?.Nome ?? "Não atribuído")
                                </span>
                            </td>
                        }
                        <td>
                            @if (cliente.Ativo)
                            {
                                <span class="badge-rir badge-rir-success">
                                    <i class="bi bi-check-circle"></i> Ativo
                                </span>
                            }
                            else
                            {
                                <span class="badge-rir badge-rir-danger">
                                    <i class="bi bi-x-circle"></i> Inativo
                                </span>
                            }
                        </td>
                        <td>
                            <div class="input-group input-group-sm" style="max-width: 300px;">
                                <input type="text"
                                       class="form-control form-control-sm"
                                       id="@copyId"
                                       value="@magicLink"
                                       readonly
                                       style="font-size: 0.8rem;">
                                <button class="btn btn-sm btn-rir-secondary"
                                        type="button"
                                        onclick="copyMagicLink('@copyId')"
                                        title="Copiar link">
                                    <i class="bi bi-clipboard"></i>
                                </button>
                            </div>
                        </td>
                        <td>
                            <div class="table-actions">
                                <a asp-action="Details"
                                   asp-route-id="@cliente.Id"
                                   class="btn btn-sm btn-rir-secondary"
                                   title="Detalhes">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit"
                                   asp-route-id="@cliente.Id"
                                   class="btn btn-sm btn-rir-primary"
                                   title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete"
                                   asp-route-id="@cliente.Id"
                                   class="btn btn-sm btn-rir-danger"
                                   title="Deletar">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- ✅ CARDS MOBILE -->
    <div class="mobile-only">
        @foreach (var cliente in Model)
        {
            var magicLink = $"{baseUrl}/Auth/LoginMagic?token={cliente.MagicToken}";
            var copyIdMobile = $"magicLinkMobile{cliente.Id}";

            <div class="client-card-mobile">
                <div class="client-card-header">
                    <div class="client-card-name">
                        <i class="bi bi-person-circle"></i>
                        <strong>@cliente.Nome</strong>
                        @if (!string.IsNullOrEmpty(cliente.CorDaPasta))
                        {
                            var corHex = cliente.CorDaPasta.ToLower() switch
                            {
                                "verde" => "#28a745",
                                "azul" => "#007bff",
                                "amarelo" => "#ffc107",
                                "vermelho" => "#dc3545",
                                "rosa" => "#e83e8c",
                                "roxo" => "#6f42c1",
                                "laranja" => "#fd7e14",
                                "preto" => "#343a40",
                                "branco" => "#f8f9fa",
                                "marrom" => "#795548",
                                "cinza" => "#6c757d",
                                _ => "#6c757d"
                            };
                            <span class="badge ms-1" 
                                  style="background-color: @corHex; color: white; font-size: 0.65rem;"
                                  title="Pasta física: @cliente.CorDaPasta">
                                📁 @cliente.CorDaPasta
                            </span>
                        }
                    </div>
                    <div>
                        @if (cliente.Ativo)
                        {
                            <span class="badge-rir badge-rir-success">
                                <i class="bi bi-check-circle"></i> Ativo
                            </span>
                        }
                        else
                        {
                            <span class="badge-rir badge-rir-danger">
                                <i class="bi bi-x-circle"></i> Inativo
                            </span>
                        }
                    </div>
                </div>

                <div class="client-card-body">
                    <div class="client-info-row">
                        <i class="bi bi-envelope"></i>
                        <span>@cliente.Email</span>
                    </div>
                    <div class="client-info-row">
                        <i class="bi bi-telephone"></i>
                        <span>@cliente.Telefone</span>
                    </div>
                    <div class="client-info-row">
                        <i class="bi bi-card-text"></i>
                        <span>@cliente.CPF</span>
                    </div>

                    @if (isAdmin)
                    {
                        <div class="client-info-row">
                            <i class="bi bi-person-badge"></i>
                            <span class="badge-rir badge-rir-info">
                                @(cliente.FuncionarioResponsavel?.Nome ?? "Não atribuído")
                            </span>
                        </div>
                    }

                    <div class="client-info-row">
                        <i class="bi bi-link-45deg"></i>
                        <div class="input-group input-group-sm">
                            <input type="text"
                                   class="form-control form-control-sm"
                                   id="@copyIdMobile"
                                   value="@magicLink"
                                   readonly
                                   style="font-size: 0.75rem;">
                            <button class="btn btn-sm btn-rir-secondary"
                                    type="button"
                                    onclick="copyMagicLink('@copyIdMobile')"
                                    title="Copiar link">
                                <i class="bi bi-clipboard"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <div class="client-card-actions">
                    <a asp-action="Details"
                       asp-route-id="@cliente.Id"
                       class="btn btn-sm btn-rir-secondary">
                        <i class="bi bi-eye"></i> Ver
                    </a>
                    <a asp-action="Edit"
                       asp-route-id="@cliente.Id"
                       class="btn btn-sm btn-rir-primary">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                    <a asp-action="Delete"
                       asp-route-id="@cliente.Id"
                       class="btn btn-sm btn-rir-danger">
                        <i class="bi bi-trash"></i> Excluir
                    </a>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="card-rir">
        <div class="card-rir-body">
            <div class="table-empty">
                <i class="bi bi-inbox"></i>
                <h4>Nenhum cliente cadastrado</h4>
                <p>
                    <a asp-action="Create" class="btn-rir-primary">
                        <i class="bi bi-plus-circle"></i> Adicionar Primeiro Cliente
                    </a>
                </p>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        function copyMagicLink(elementId) {
            const input = document.getElementById(elementId);
            input.select();
            input.setSelectionRange(0, 99999);

            navigator.clipboard.writeText(input.value).then(function() {
                const button = input.nextElementSibling;
                const originalHTML = button.innerHTML;
                const originalClass = button.className;

                button.innerHTML = '<i class="bi bi-check-lg"></i>';
                button.classList.remove('btn-rir-secondary');
                button.classList.add('btn-rir-success');

                setTimeout(function() {
                    button.innerHTML = originalHTML;
                    button.className = originalClass;
                }, 2000);
            }).catch(function(err) {
                alert('Erro ao copiar: ' + err);
            });
        }
    </script>
}