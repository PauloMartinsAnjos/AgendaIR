@model IEnumerable<AgendaIR.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
    var isAdmin = User.FindFirst("IsAdmin")?.Value == "True";
    var baseUrl = ViewBag.BaseUrl as string ?? "";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="bi bi-people-fill"></i> Meus Clientes</h2>
            <p class="text-muted">Gerencie os clientes e seus links de acesso</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Novo Cliente
            </a>
        </div>
    </div>

    @* Filtro por funcionário (apenas para admins) *@
    @if (isAdmin)
    {
        <div class="card mb-4">
            <div class="card-body">
                <form method="get" asp-action="Index" class="row g-3">
                    <div class="col-md-10">
                        <label for="funcionarioId" class="form-label">Filtrar por Funcionário</label>
                        <select name="funcionarioId" id="funcionarioId" class="form-select">
                            <option value="">Todos os funcionários</option>
                            @if (ViewBag.Funcionarios != null)
                            {
                                foreach (var func in ViewBag.Funcionarios as IEnumerable<AgendaIR.Models.Funcionario>)
                                {
                                    var selected = ViewBag.FuncionarioIdFiltro != null && (int)ViewBag.FuncionarioIdFiltro == func.Id;
                                    <option value="@func.Id" selected="@selected">@func.Nome</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-funnel"></i> Filtrar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    }

    @* Mensagens de sucesso/erro *@
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @* Tabela de clientes *@
    @if (Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Nome</th>
                                <th>Email</th>
                                <th>Telefone</th>
                                <th>CPF</th>
                                @if (isAdmin)
                                {
                                    <th>Funcionário</th>
                                }
                                <th>Status</th>
                                <th>Magic Link</th>
                                <th class="text-center">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cliente in Model)
                            {
                                var magicLink = $"{baseUrl}/Auth/LoginMagic?token={cliente.MagicToken}";
                                var copyId = $"magicLink{cliente.Id}";
                                
                                <tr>
                                    <td>
                                        <strong>@cliente.Nome</strong>
                                    </td>
                                    <td>@cliente.Email</td>
                                    <td>@cliente.Telefone</td>
                                    <td>@cliente.CPF</td>
                                    @if (isAdmin)
                                    {
                                        <td>
                                            <span class="badge bg-info">
                                                @cliente.Funcionario?.Nome
                                            </span>
                                        </td>
                                    }
                                    <td>
                                        @if (cliente.Ativo)
                                        {
                                            <span class="badge bg-success">Ativo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inativo</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="input-group input-group-sm" style="max-width: 250px;">
                                            <input type="text" 
                                                   class="form-control form-control-sm" 
                                                   id="@copyId" 
                                                   value="@magicLink" 
                                                   readonly>
                                            <button class="btn btn-outline-secondary" 
                                                    type="button" 
                                                    onclick="copyMagicLink('@copyId')"
                                                    title="Copiar link">
                                                <i class="bi bi-clipboard"></i>
                                            </button>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" 
                                               asp-route-id="@cliente.Id" 
                                               class="btn btn-outline-info"
                                               title="Detalhes">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" 
                                               asp-route-id="@cliente.Id" 
                                               class="btn btn-outline-warning"
                                               title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" 
                                               asp-route-id="@cliente.Id" 
                                               class="btn btn-outline-danger"
                                               title="Deletar">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> 
            Nenhum cliente cadastrado ainda. 
            <a asp-action="Create" class="alert-link">Clique aqui para adicionar o primeiro cliente</a>.
        </div>
    }
</div>

@section Scripts {
    <script>
        // Função para copiar magic link
        function copyMagicLink(elementId) {
            const input = document.getElementById(elementId);
            input.select();
            input.setSelectionRange(0, 99999); // Para mobile
            
            navigator.clipboard.writeText(input.value).then(function() {
                // Mostrar feedback visual
                const button = input.nextElementSibling;
                const originalHTML = button.innerHTML;
                button.innerHTML = '<i class="bi bi-check"></i>';
                button.classList.remove('btn-outline-secondary');
                button.classList.add('btn-success');
                
                setTimeout(function() {
                    button.innerHTML = originalHTML;
                    button.classList.remove('btn-success');
                    button.classList.add('btn-outline-secondary');
                }, 2000);
            }).catch(function(err) {
                alert('Erro ao copiar: ' + err);
            });
        }
    </script>
}
