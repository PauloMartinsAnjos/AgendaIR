@model AgendaIR.Models.ViewModels.DocumentoSolicitadoViewModel

@{
    ViewData["Title"] = "Deletar Documento";
}

<!-- PAGE HEADER -->
<div class="page-header-rir">
    <div>
        <h2><i class="bi bi-trash"></i> Deletar Documento Solicitado</h2>
        <p>Atenção: Esta ação é permanente</p>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-12 col-lg-10">
        <div class="card-rir border-danger">
            <div class="card-rir-header bg-danger text-white">
                <h5 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Deletar Documento</h5>
            </div>
            <div class="card-rir-body">
                @* Mensagem de erro se não puder deletar *@
                @if (TempData["Error"] != null)
                {
                    <div class="alert-rir alert-rir-danger mb-4">
                        <i class="bi bi-exclamation-triangle-fill" style="font-size: 1.5rem;"></i>
                        <div>
                            <strong>Erro!</strong><br />
                            @TempData["Error"]
                        </div>
                    </div>
                }

                <div class="alert-rir alert-rir-info mb-4">
                    <i class="bi bi-exclamation-triangle-fill" style="font-size: 1.5rem;"></i>
                    <div>
                        <strong>Atenção!</strong> Você está prestes a deletar este documento permanentemente.
                    </div>
                </div>

                @* Informações do documento *@
                <div class="card-rir mb-4">
                    <div class="card-rir-body">
                        <h5>@Model.Nome</h5>
                        
                        @if (!string.IsNullOrEmpty(Model.Descricao))
                        {
                            <p class="text-muted mb-3">
                                <strong>Descrição:</strong> @Model.Descricao
                            </p>
                        }

                        <div class="row mt-3">
                            <div class="col-12 col-md-6 mb-2">
                                <p class="mb-0">
                                    <strong>Status:</strong>
                                    @if (Model.Ativo)
                                    {
                                        <span class="badge-rir badge-rir-success">
                                            <i class="bi bi-check-circle"></i> Ativo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge-rir badge-rir-info">
                                            <i class="bi bi-x-circle"></i> Inativo
                                        </span>
                                    }
                                </p>
                            </div>
                            <div class="col-12 col-md-6 mb-2">
                                <p class="mb-0">
                                    <strong>Tipo:</strong>
                                    @if (Model.Obrigatorio)
                                    {
                                        <span class="badge-rir badge-rir-danger">
                                            <i class="bi bi-exclamation-circle"></i> Obrigatório
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge-rir badge-rir-info">
                                            <i class="bi bi-info-circle"></i> Opcional
                                        </span>
                                    }
                                </p>
                            </div>
                        </div>

                        @if (Model.DataCriacao.HasValue)
                        {
                            <p class="mb-0 text-muted mt-2">
                                <small>
                                    <i class="bi bi-calendar-check"></i> 
                                    Criado em: @Model.DataCriacao.Value.ToString("dd/MM/yyyy HH:mm")
                                </small>
                            </p>
                        }
                    </div>
                </div>

                @* Aviso sobre documentos anexados *@
                @if (Model.QuantidadeDocumentosAnexados > 0)
                {
                    <div class="alert-rir alert-rir-danger mb-4">
                        <i class="bi bi-exclamation-octagon-fill" style="font-size: 1.5rem;"></i>
                        <div>
                            <strong>ATENÇÃO: Existem documentos anexados!</strong><br />
                            <p class="mb-0 mt-2">
                                Este documento possui <strong>@Model.QuantidadeDocumentosAnexados documento(s) anexado(s)</strong> 
                                relacionado(s) em agendamentos.
                            </p>
                            <hr />
                            <p class="mb-0">
                                <strong>Você NÃO pode deletar este documento.</strong> 
                                A deleção está bloqueada para preservar a integridade dos dados.
                            </p>
                            <p class="mb-0 mt-2">
                                <strong>Alternativa:</strong> Em vez de deletar, você pode desativar este documento.
                                Isso impedirá que novos documentos sejam solicitados, mas manterá o histórico dos documentos já anexados.
                            </p>
                        </div>
                    </div>

                    <div class="d-flex flex-column flex-md-row justify-content-between gap-2">
                        <a asp-action="Index" class="btn-rir-secondary">
                            <i class="bi bi-arrow-left"></i> Voltar
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-rir-primary">
                            <i class="bi bi-pencil"></i> Desativar Documento
                        </a>
                    </div>
                }
                else
                {
                    <div class="alert-rir alert-rir-success mb-4">
                        <i class="bi bi-check-circle-fill" style="font-size: 1.5rem;"></i>
                        <div>
                            Este documento <strong>não possui documentos anexados</strong> e pode ser deletado com segurança.
                        </div>
                    </div>

                    <div class="alert-rir alert-rir-info mb-4">
                        <i class="bi bi-lightbulb-fill" style="font-size: 1.5rem;"></i>
                        <div>
                            <strong>Sugestão:</strong> Se você pode precisar deste documento no futuro, 
                            considere desativá-lo em vez de deletá-lo. Você pode reativá-lo a qualquer momento.
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="d-flex flex-column flex-md-row justify-content-between gap-2">
                            <a asp-action="Index" class="btn-rir-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            
                            <div class="d-flex flex-column flex-md-row gap-2">
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-rir-primary">
                                    <i class="bi bi-toggle-off"></i> Desativar ao Invés de Deletar
                                </a>
                                <button type="submit" 
                                        class="btn-rir-danger" 
                                        onclick="return confirm('Tem certeza que deseja deletar este documento PERMANENTEMENTE? Esta ação não pode ser desfeita!');">
                                    <i class="bi bi-trash"></i> Deletar Permanentemente
                                </button>
                            </div>
                        </div>
                    </form>
                }
            </div>
        </div>

        @* Informação adicional sobre soft delete *@
        <div class="card-rir mt-4">
            <div class="card-rir-body">
                <h6>
                    <i class="bi bi-info-circle"></i> Diferença entre Deletar e Desativar
                </h6>
                <div class="row">
                    <div class="col-12 col-md-6 mb-3 mb-md-0">
                        <h6 class="text-danger">Deletar (Hard Delete)</h6>
                        <ul class="small">
                            <li>Remove PERMANENTEMENTE do banco de dados</li>
                            <li>Não pode ser desfeito</li>
                            <li>Só é permitido se não houver documentos anexados</li>
                            <li>Perde todo o histórico</li>
                        </ul>
                    </div>
                    <div class="col-12 col-md-6">
                        <h6 class="text-primary">Desativar (Soft Delete)</h6>
                        <ul class="small">
                            <li>Mantém no banco, mas marca como inativo</li>
                            <li>Pode ser reativado a qualquer momento</li>
                            <li>Preserva histórico de documentos anexados</li>
                            <li>Recomendado na maioria dos casos</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
