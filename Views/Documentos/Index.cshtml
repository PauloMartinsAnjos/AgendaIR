@model IEnumerable<AgendaIR.Models.DocumentoSolicitado>

@{
    ViewData["Title"] = "Documentos Solicitados";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="bi bi-file-earmark-text"></i> Documentos Solicitados</h2>
            <p class="text-muted">Gerencie a lista global de documentos solicitados aos clientes</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Novo Documento
            </a>
        </div>
    </div>

    @* Mensagens de sucesso/erro *@
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @* Informação sobre a lista global *@
    <div class="alert alert-info mb-4">
        <i class="bi bi-info-circle"></i>
        <strong>Lista Global:</strong> Estes documentos são solicitados a todos os clientes no momento do agendamento.
        Você pode desativar documentos sem deletá-los do sistema.
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Descrição</th>
                                <th class="text-center">Status</th>
                                <th class="text-center">Tipo</th>
                                <th class="text-center">Data de Criação</th>
                                <th class="text-center">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="@(!item.Ativo ? "table-secondary" : "")">
                                    <td>
                                        <strong>@item.Nome</strong>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Descricao))
                                        {
                                            <small class="text-muted">@item.Descricao</small>
                                        }
                                        else
                                        {
                                            <small class="text-muted fst-italic">Sem descrição</small>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (item.Ativo)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Ativo
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-x-circle"></i> Inativo
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (item.Obrigatorio)
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-exclamation-circle"></i> Obrigatório
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info">
                                                <i class="bi bi-info-circle"></i> Opcional
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <small>@item.DataCriacao.ToString("dd/MM/yyyy")</small>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-outline-primary" 
                                               title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            
                                            @* Botão para toggle Ativo *@
                                            <form asp-action="ToggleAtivo" asp-route-id="@item.Id" 
                                                  method="post" 
                                                  class="d-inline"
                                                  onsubmit="return confirm('@(item.Ativo ? "Desativar" : "Ativar") este documento?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" 
                                                        class="btn btn-sm btn-outline-@(item.Ativo ? "warning" : "success")" 
                                                        title="@(item.Ativo ? "Desativar" : "Ativar")">
                                                    <i class="bi bi-@(item.Ativo ? "toggle-on" : "toggle-off")"></i>
                                                </button>
                                            </form>

                                            <a asp-action="Delete" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-outline-danger" 
                                               title="Deletar">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        @* Estatísticas *@
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">@Model.Count()</h5>
                        <p class="card-text text-muted">Total de Documentos</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title text-success">@Model.Count(d => d.Ativo)</h5>
                        <p class="card-text text-muted">Ativos</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title text-danger">@Model.Count(d => d.Obrigatorio)</h5>
                        <p class="card-text text-muted">Obrigatórios</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title text-info">@Model.Count(d => !d.Obrigatorio)</h5>
                        <p class="card-text text-muted">Opcionais</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i>
            Nenhum documento cadastrado. Clique em "Novo Documento" para adicionar o primeiro documento solicitado.
        </div>
    }
</div>
