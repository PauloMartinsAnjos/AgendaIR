@model IEnumerable<AgendaIR.Models.DocumentoSolicitado>

@{
    ViewData["Title"] = "Documentos Solicitados";
}

<!-- PAGE HEADER -->
<div class="page-header-rir">
    <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
        <div>
            <h2><i class="bi bi-file-earmark-text"></i> Documentos Solicitados</h2>
            <p>Gerencie a lista global de documentos solicitados aos clientes</p>
        </div>
        <a asp-action="Create" class="btn-rir-primary">
            <i class="bi bi-plus-circle"></i> Novo Documento
        </a>
    </div>
</div>

<!-- MENSAGENS -->
@if (TempData["Success"] != null)
{
    <div class="alert-rir alert-rir-success">
        <i class="bi bi-check-circle-fill" style="font-size: 1.5rem;"></i>
        <div>
            <strong>Sucesso!</strong><br />
            @TempData["Success"]
        </div>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert-rir alert-rir-danger">
        <i class="bi bi-exclamation-triangle-fill" style="font-size: 1.5rem;"></i>
        <div>
            <strong>Erro!</strong><br />
            @TempData["Error"]
        </div>
    </div>
}

<!-- Informação sobre a lista global -->
<div class="alert-rir alert-rir-info mb-4">
    <i class="bi bi-info-circle" style="font-size: 1.5rem;"></i>
    <div>
        <strong>Lista Global:</strong> Estes documentos são solicitados a todos os clientes no momento do agendamento.
        Você pode desativar documentos sem deletá-los do sistema.
    </div>
</div>

<!-- FILTROS -->
<div class="card-rir mb-4">
    <div class="card-rir-header">
        <h5 class="mb-0"><i class="bi bi-funnel"></i> Filtros</h5>
    </div>
    <div class="card-rir-body">
        <form asp-action="Index" method="get">
            <div class="row g-3">
                <!-- Nome -->
                <div class="col-12 col-md-6 col-lg-4">
                    <label class="form-label fw-bold">
                        <i class="bi bi-file-text"></i> Nome do Documento
                    </label>
                    <input type="text" name="filtroNome" class="form-control" 
                           value="@ViewBag.FiltroNome" placeholder="Buscar por nome..." />
                </div>

                <!-- Tipo de Agendamento -->
                <div class="col-12 col-md-6 col-lg-4">
                    <label class="form-label fw-bold">
                        <i class="bi bi-tag"></i> Tipo de Agendamento
                    </label>
                    <select name="filtroTipoId" class="form-select">
                        <option value="">Todos os Tipos</option>
                        @if (ViewBag.TiposAgendamento != null)
                        {
                            @foreach (var tipo in (List<AgendaIR.Models.TipoAgendamento>)ViewBag.TiposAgendamento)
                            {
                                <option value="@tipo.Id" selected="@(ViewBag.FiltroTipoId == tipo.Id)">
                                    @tipo.Nome
                                </option>
                            }
                        }
                    </select>
                </div>

                <!-- Obrigatório -->
                <div class="col-12 col-md-6 col-lg-2">
                    <label class="form-label fw-bold">
                        <i class="bi bi-exclamation-circle"></i> Obrigatório
                    </label>
                    <select name="filtroObrigatorio" class="form-select">
                        <option value="">Todos</option>
                        <option value="true" selected="@(ViewBag.FiltroObrigatorio == true)">Sim</option>
                        <option value="false" selected="@(ViewBag.FiltroObrigatorio == false)">Não</option>
                    </select>
                </div>

                <!-- Status -->
                <div class="col-12 col-md-6 col-lg-2">
                    <label class="form-label fw-bold">
                        <i class="bi bi-toggle-on"></i> Status
                    </label>
                    <select name="filtroAtivo" class="form-select">
                        <option value="">Todos</option>
                        <option value="true" selected="@(ViewBag.FiltroAtivo == true)">Ativo</option>
                        <option value="false" selected="@(ViewBag.FiltroAtivo == false)">Inativo</option>
                    </select>
                </div>
            </div>

            <div class="mt-3 d-flex gap-2">
                <button type="submit" class="btn-rir-primary">
                    <i class="bi bi-search"></i> Filtrar
                </button>
                <a asp-action="Index" class="btn-rir-secondary">
                    <i class="bi bi-x-circle"></i> Limpar Filtros
                </a>
            </div>
        </form>
    </div>
</div>

    @if (Model != null && Model.Any())
    {
        <!-- ✅ TABELA DESKTOP -->
        <div class="table-responsive-rir desktop-only">
            <table class="table-rir">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Descrição</th>
                        <th class="text-center">Status</th>
                        <th class="text-center">Tipo</th>
                        <th class="text-center">Data de Criação</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="@(!item.Ativo ? "table-secondary" : "")">
                            <td>
                                <strong>@item.Nome</strong>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Descricao))
                                {
                                    <small class="text-muted">@item.Descricao</small>
                                }
                                else
                                {
                                    <small class="text-muted fst-italic">Sem descrição</small>
                                }
                            </td>
                            <td class="text-center">
                                @if (item.Ativo)
                                {
                                    <span class="badge-rir badge-rir-success">
                                        <i class="bi bi-check-circle"></i> Ativo
                                    </span>
                                }
                                else
                                {
                                    <span class="badge-rir badge-rir-info">
                                        <i class="bi bi-x-circle"></i> Inativo
                                    </span>
                                }
                            </td>
                            <td class="text-center">
                                @if (item.Obrigatorio)
                                {
                                    <span class="badge-rir badge-rir-danger">
                                        <i class="bi bi-exclamation-circle"></i> Obrigatório
                                    </span>
                                }
                                else
                                {
                                    <span class="badge-rir badge-rir-info">
                                        <i class="bi bi-info-circle"></i> Opcional
                                    </span>
                                }
                            </td>
                            <td class="text-center">
                                <small>@item.DataCriacao.ToString("dd/MM/yyyy")</small>
                            </td>
                            <td>
                                <div class="table-actions">
                                    <a asp-action="Edit" asp-route-id="@item.Id" 
                                       class="btn btn-sm btn-rir-primary" 
                                       title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    
                                    @* Botão para toggle Ativo *@
                                    <form asp-action="ToggleAtivo" asp-route-id="@item.Id" 
                                          method="post" 
                                          class="d-inline"
                                          onsubmit="return confirm('@(item.Ativo ? "Desativar" : "Ativar") este documento?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" 
                                                class="btn btn-sm @(item.Ativo ? "btn-rir-secondary" : "btn-rir-success")" 
                                                title="@(item.Ativo ? "Desativar" : "Ativar")">
                                            <i class="bi bi-@(item.Ativo ? "toggle-on" : "toggle-off")"></i>
                                        </button>
                                    </form>

                                    <a asp-action="Delete" asp-route-id="@item.Id" 
                                       class="btn btn-sm btn-rir-danger" 
                                       title="Deletar">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- ✅ CARDS MOBILE -->
        <div class="mobile-only">
            @foreach (var item in Model)
            {
                <div class="client-card-mobile @(!item.Ativo ? "opacity-75" : "")">
                    <div class="client-card-header">
                        <div class="client-card-name">
                            <i class="bi bi-file-earmark-text"></i>
                            <strong>@item.Nome</strong>
                        </div>
                        <div>
                            @if (item.Ativo)
                            {
                                <span class="badge-rir badge-rir-success">
                                    <i class="bi bi-check-circle"></i> Ativo
                                </span>
                            }
                            else
                            {
                                <span class="badge-rir badge-rir-info">
                                    <i class="bi bi-x-circle"></i> Inativo
                                </span>
                            }
                        </div>
                    </div>

                    <div class="client-card-body">
                        <div class="client-info-row">
                            <i class="bi bi-text-paragraph"></i>
                            <span>
                                @if (!string.IsNullOrEmpty(item.Descricao))
                                {
                                    <text>@item.Descricao</text>
                                }
                                else
                                {
                                    <em class="text-muted">Sem descrição</em>
                                }
                            </span>
                        </div>
                        <div class="client-info-row">
                            <i class="bi bi-flag"></i>
                            <span>
                                @if (item.Obrigatorio)
                                {
                                    <span class="badge-rir badge-rir-danger">
                                        <i class="bi bi-exclamation-circle"></i> Obrigatório
                                    </span>
                                }
                                else
                                {
                                    <span class="badge-rir badge-rir-info">
                                        <i class="bi bi-info-circle"></i> Opcional
                                    </span>
                                }
                            </span>
                        </div>
                        <div class="client-info-row">
                            <i class="bi bi-calendar"></i>
                            <span>Criado em @item.DataCriacao.ToString("dd/MM/yyyy")</span>
                        </div>
                    </div>

                    <div class="client-card-actions">
                        <a asp-action="Edit" asp-route-id="@item.Id" 
                           class="btn btn-sm btn-rir-primary">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        <form asp-action="ToggleAtivo" asp-route-id="@item.Id" 
                              method="post" 
                              class="d-inline"
                              onsubmit="return confirm('@(item.Ativo ? "Desativar" : "Ativar") este documento?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" 
                                    class="btn btn-sm @(item.Ativo ? "btn-rir-secondary" : "btn-rir-success")">
                                <i class="bi bi-@(item.Ativo ? "toggle-on" : "toggle-off")"></i> @(item.Ativo ? "Desativar" : "Ativar")
                            </button>
                        </form>
                        <a asp-action="Delete" asp-route-id="@item.Id" 
                           class="btn btn-sm btn-rir-danger">
                            <i class="bi bi-trash"></i> Excluir
                        </a>
                    </div>
                </div>
            }
        </div>

        @* Estatísticas *@
        <div class="row mt-4">
            <div class="col-6 col-md-3 mb-3">
                <div class="card-rir text-center">
                    <div class="card-rir-body">
                        <h5>@Model.Count()</h5>
                        <p class="text-muted mb-0">Total de Documentos</p>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3 mb-3">
                <div class="card-rir text-center">
                    <div class="card-rir-body">
                        <h5 class="text-success">@Model.Count(d => d.Ativo)</h5>
                        <p class="text-muted mb-0">Ativos</p>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3 mb-3">
                <div class="card-rir text-center">
                    <div class="card-rir-body">
                        <h5 class="text-danger">@Model.Count(d => d.Obrigatorio)</h5>
                        <p class="text-muted mb-0">Obrigatórios</p>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3 mb-3">
                <div class="card-rir text-center">
                    <div class="card-rir-body">
                        <h5 class="text-info">@Model.Count(d => !d.Obrigatorio)</h5>
                        <p class="text-muted mb-0">Opcionais</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card-rir">
            <div class="card-rir-body">
                <div class="table-empty">
                    <i class="bi bi-inbox"></i>
                    <h4>Nenhum documento cadastrado</h4>
                    <p>
                        <a asp-action="Create" class="btn-rir-primary">
                            <i class="bi bi-plus-circle"></i> Adicionar Primeiro Documento
                        </a>
                    </p>
                </div>
            </div>
        </div>
    }

