@model AgendaIR.Models.ViewModels.DocumentoSolicitadoViewModel

@{
    ViewData["Title"] = "Editar Documento";
}

<!-- PAGE HEADER -->
<div class="page-header-rir">
    <div>
        <h2><i class="bi bi-pencil"></i> Editar Documento Solicitado</h2>
        <p>Atualize as informações do documento</p>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-12 col-lg-10">
        <div class="card-rir">
            <div class="card-rir-body">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />

                    @* Informação sobre data de criação *@
                    @if (Model.DataCriacao.HasValue)
                    {
                        <div class="alert-rir alert-rir-info mb-4">
                            <i class="bi bi-calendar-check" style="font-size: 1.5rem;"></i>
                            <div>
                                Documento criado em: <strong>@Model.DataCriacao.Value.ToString("dd/MM/yyyy HH:mm")</strong>
                            </div>
                        </div>
                    }

                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label fw-bold">
                            Nome do Documento <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Nome" class="form-control" placeholder="Ex: RG, CPF, Comprovante de Residência" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                        <small class="form-text text-muted">
                            Nome do documento que será exibido para os clientes
                        </small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Descricao" class="form-label fw-bold">
                            Descrição/Instruções
                        </label>
                        <textarea asp-for="Descricao" 
                                  class="form-control" 
                                  rows="3" 
                                  placeholder="Ex: Envie o RG frente e verso em um único arquivo PDF"></textarea>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                        <small class="form-text text-muted">
                            Instruções opcionais sobre como o cliente deve enviar o documento
                        </small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TipoAgendamentoId" class="form-label fw-bold">
                            <i class="bi bi-list-task"></i> Tipo de Agendamento (opcional)
                        </label>
                        <select asp-for="TipoAgendamentoId" class="form-select">
                            <option value="">-- Nenhum (documento genérico) --</option>
                            @if (ViewBag.TiposAgendamento != null)
                            {
                                foreach (var tipo in (ViewBag.TiposAgendamento as List<AgendaIR.Models.TipoAgendamento>)!)
                                {
                                    <option value="@tipo.Id">@tipo.Nome</option>
                                }
                            }
                        </select>
                        <small class="form-text text-muted">
                            Se selecionado, este documento aparecerá apenas para agendamentos deste tipo
                        </small>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12 col-md-6 mb-3 mb-md-0">
                            <div class="form-check form-switch">
                                <input asp-for="Obrigatorio" class="form-check-input" type="checkbox" role="switch" />
                                <label asp-for="Obrigatorio" class="form-check-label fw-bold">
                                    Documento Obrigatório
                                </label>
                            </div>
                            <small class="form-text text-muted">
                                Se marcado, o cliente DEVE enviar este documento ao fazer um agendamento
                            </small>
                        </div>

                        <div class="col-12 col-md-6">
                            <div class="form-check form-switch">
                                <input asp-for="Ativo" class="form-check-input" type="checkbox" role="switch" />
                                <label asp-for="Ativo" class="form-check-label fw-bold">
                                    Documento Ativo
                                </label>
                            </div>
                            <small class="form-text text-muted">
                                Apenas documentos ativos são solicitados aos clientes
                            </small>
                        </div>
                    </div>

                    @* Dica sobre desativar vs deletar *@
                    <div class="alert-rir alert-rir-info mb-4">
                        <i class="bi bi-lightbulb" style="font-size: 1.5rem;"></i>
                        <div>
                            <strong>Dica:</strong> Se não quiser mais solicitar este documento, desmarque "Documento Ativo" 
                            ao invés de deletá-lo. Isso mantém o histórico de documentos anexados anteriormente.
                        </div>
                    </div>

                    @* Pré-visualização *@
                    <div class="alert-rir alert-rir-info mt-4">
                        <i class="bi bi-eye" style="font-size: 1.5rem;"></i>
                        <div>
                            <strong>Pré-visualização:</strong><br />
                            <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mt-2">
                                <div>
                                    <strong id="preview-nome">@Model.Nome</strong>
                                    <br />
                                    <small class="text-muted" id="preview-descricao">@(Model.Descricao ?? "Sem descrição")</small>
                                </div>
                                <div>
                                    <span class="badge-rir badge-rir-success me-1" id="preview-ativo" style="display: @(Model.Ativo ? "inline-block" : "none");">
                                        <i class="bi bi-check-circle"></i> Ativo
                                    </span>
                                    <span class="badge-rir badge-rir-info me-1" id="preview-inativo" style="display: @(Model.Ativo ? "none" : "inline-block");">
                                        <i class="bi bi-x-circle"></i> Inativo
                                    </span>
                                    <span class="badge-rir badge-rir-danger" id="preview-obrigatorio" style="display: @(Model.Obrigatorio ? "inline-block" : "none");">
                                        <i class="bi bi-exclamation-circle"></i> Obrigatório
                                    </span>
                                    <span class="badge-rir badge-rir-info" id="preview-opcional" style="display: @(Model.Obrigatorio ? "none" : "inline-block");">
                                        <i class="bi bi-info-circle"></i> Opcional
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="d-flex flex-column flex-md-row justify-content-between gap-2">
                        <a asp-action="Index" class="btn-rir-secondary">
                            <i class="bi bi-arrow-left"></i> Cancelar
                        </a>
                        <button type="submit" class="btn-rir-primary">
                            <i class="bi bi-save"></i> Salvar Alterações
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Preview em tempo real
        document.getElementById('Nome').addEventListener('input', function() {
            const nome = this.value || 'Nome do Documento';
            document.getElementById('preview-nome').textContent = nome;
        });

        document.getElementById('Descricao').addEventListener('input', function() {
            const descricao = this.value || 'Sem descrição';
            document.getElementById('preview-descricao').textContent = descricao;
        });

        document.getElementById('Ativo').addEventListener('change', function() {
            if (this.checked) {
                document.getElementById('preview-ativo').style.display = 'inline-block';
                document.getElementById('preview-inativo').style.display = 'none';
            } else {
                document.getElementById('preview-ativo').style.display = 'none';
                document.getElementById('preview-inativo').style.display = 'inline-block';
            }
        });

        document.getElementById('Obrigatorio').addEventListener('change', function() {
            if (this.checked) {
                document.getElementById('preview-obrigatorio').style.display = 'inline-block';
                document.getElementById('preview-opcional').style.display = 'none';
            } else {
                document.getElementById('preview-obrigatorio').style.display = 'none';
                document.getElementById('preview-opcional').style.display = 'inline-block';
            }
        });
    </script>
}
