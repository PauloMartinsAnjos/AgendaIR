@model AgendaIR.Models.TipoAgendamento

@{
    ViewData["Title"] = "Editar Tipo de Agendamento";
}

<div class="page-header-rir">
    <div>
        <h2><i class="bi bi-pencil-square"></i> Editar Tipo de Agendamento</h2>
        <p>Atualize as informações do tipo</p>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-12 col-lg-8">
        <div class="card-rir">
            <div class="card-rir-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert-rir alert-rir-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="DataCriacao" />

                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label fw-bold">
                            <i class="bi bi-tag"></i> Nome do Tipo
                        </label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Descricao" class="form-label fw-bold">
                            <i class="bi bi-text-left"></i> Descrição (opcional)
                        </label>
                        <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input asp-for="Ativo" class="form-check-input" type="checkbox" id="ativoSwitch" />
                            <label class="form-check-label fw-bold" for="ativoSwitch">
                                <i class="bi bi-toggle-on"></i> Tipo Ativo
                            </label>
                        </div>
                        <small class="form-text text-muted">
                            Tipos inativos não aparecem nas opções de agendamento
                        </small>
                    </div>

                    <div class="d-flex justify-content-between gap-2">
                        <a asp-action="Index" class="btn-rir-secondary">
                            <i class="bi bi-arrow-left"></i> Cancelar
                        </a>
                        <button type="submit" class="btn-rir-primary">
                            <i class="bi bi-save"></i> Salvar Alterações
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
