@model AgendaIR.Models.TipoAgendamento

@{
    ViewData["Title"] = "Novo Tipo de Agendamento";
}

<div class="page-header-rir">
    <div>
        <h2><i class="bi bi-plus-circle"></i> Novo Tipo de Agendamento</h2>
        <p>Crie um novo tipo de agendamento</p>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-12 col-lg-8">
        <div class="card-rir">
            <div class="card-rir-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert-rir alert-rir-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label fw-bold">
                            <i class="bi bi-tag"></i> Nome do Tipo
                        </label>
                        <input asp-for="Nome" class="form-control" placeholder="Ex: Declaração IR" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Descricao" class="form-label fw-bold">
                            <i class="bi bi-text-left"></i> Descrição (opcional)
                        </label>
                        <textarea asp-for="Descricao" class="form-control" rows="3" 
                                  placeholder="Descreva brevemente este tipo de agendamento"></textarea>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Local" class="form-label fw-bold">
                            <i class="bi bi-geo-alt"></i> Local (opcional)
                        </label>
                        <input asp-for="Local" class="form-control" placeholder="Ex: Escritório, Online, Casa do Cliente" />
                        <span asp-validation-for="Local" class="text-danger"></span>
                        <small class="form-text text-muted">Local onde o atendimento será realizado</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CorCalendario" class="form-label fw-bold">
                            <i class="bi bi-palette"></i> Cor no Calendário
                        </label>
                        <select asp-for="CorCalendario" class="form-select">
                            <option value="1">Azul Claro</option>
                            <option value="2">Verde</option>
                            <option value="3">Roxo</option>
                            <option value="4">Rosa</option>
                            <option value="5">Amarelo</option>
                            <option value="6" selected>Laranja</option>
                            <option value="7">Turquesa</option>
                            <option value="8">Cinza</option>
                            <option value="9">Azul Escuro</option>
                            <option value="10">Verde Escuro</option>
                            <option value="11">Vermelho</option>
                        </select>
                        <span asp-validation-for="CorCalendario" class="text-danger"></span>
                        <small class="form-text text-muted">Cor do evento no Google Calendar</small>
                    </div>

                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input asp-for="CriarGoogleMeet" class="form-check-input" type="checkbox" />
                            <label asp-for="CriarGoogleMeet" class="form-check-label fw-bold">
                                <i class="bi bi-camera-video"></i> Criar Google Meet
                            </label>
                        </div>
                        <small class="form-text text-muted">Se marcado, cria automaticamente link do Google Meet</small>
                    </div>

                    <div class="mb-4">
                        <div class="form-check form-switch">
                            <input asp-for="BloqueiaHorario" class="form-check-input" type="checkbox" checked />
                            <label asp-for="BloqueiaHorario" class="form-check-label fw-bold">
                                <i class="bi bi-lock"></i> Bloqueia Horário
                            </label>
                        </div>
                        <small class="form-text text-muted">Se marcado, marca horário como ocupado no calendário</small>
                    </div>

                    <div class="d-flex justify-content-between gap-2">
                        <a asp-action="Index" class="btn-rir-secondary">
                            <i class="bi bi-arrow-left"></i> Cancelar
                        </a>
                        <button type="submit" class="btn-rir-primary">
                            <i class="bi bi-save"></i> Salvar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
