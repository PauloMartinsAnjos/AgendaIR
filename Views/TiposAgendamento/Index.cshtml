@model IEnumerable<AgendaIR.Models.TipoAgendamento>

@{
    ViewData["Title"] = "Tipos de Agendamento";
}

<!-- PAGE HEADER -->
<div class="page-header-rir">
    <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
        <div>
            <h2><i class="bi bi-list-task"></i> Tipos de Agendamento</h2>
            <p>Gerencie os tipos de agendamento disponíveis</p>
        </div>
        <a asp-action="Create" class="btn btn-rir-primary">
            <i class="bi bi-plus-circle"></i> Novo Tipo
        </a>
    </div>
</div>

<!-- MESSAGES -->
@if (TempData["Success"] != null)
{
    <div class="alert-rir alert-rir-success">
        <i class="bi bi-check-circle"></i>
        <div>
            <strong>Sucesso!</strong><br />
            @TempData["Success"]
        </div>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert-rir alert-rir-danger">
        <i class="bi bi-exclamation-triangle"></i>
        <div>
            <strong>Erro!</strong><br />
            @TempData["Error"]
        </div>
    </div>
}

<!-- FILTROS -->
<div class="card-rir mb-4">
    <div class="card-rir-header">
        <h5 class="mb-0"><i class="bi bi-funnel"></i> Filtros</h5>
    </div>
    <div class="card-rir-body">
        <form asp-action="Index" method="get">
            <div class="row g-3">
                <!-- Nome -->
                <div class="col-12 col-md-6 col-lg-4">
                    <label class="form-label fw-bold">
                        <i class="bi bi-tag"></i> Nome
                    </label>
                    <input type="text" name="filtroNome" class="form-control" 
                           value="@ViewBag.FiltroNome" placeholder="Buscar por nome..." />
                </div>

                <!-- Status -->
                <div class="col-12 col-md-6 col-lg-2">
                    <label class="form-label fw-bold">
                        <i class="bi bi-toggle-on"></i> Status
                    </label>
                    <select name="filtroAtivo" class="form-select">
                        <option value="">Todos</option>
                        <option value="true" selected="@(ViewBag.FiltroAtivo == true)">Ativo</option>
                        <option value="false" selected="@(ViewBag.FiltroAtivo == false)">Inativo</option>
                    </select>
                </div>

                <!-- Google Meet -->
                <div class="col-12 col-md-6 col-lg-3">
                    <label class="form-label fw-bold">
                        <i class="bi bi-camera-video"></i> Criar Google Meet
                    </label>
                    <select name="filtroCriarMeet" class="form-select">
                        <option value="">Todos</option>
                        <option value="true" selected="@(ViewBag.FiltroCriarMeet == true)">Sim</option>
                        <option value="false" selected="@(ViewBag.FiltroCriarMeet == false)">Não</option>
                    </select>
                </div>

                <!-- Bloqueia Horário -->
                <div class="col-12 col-md-6 col-lg-3">
                    <label class="form-label fw-bold">
                        <i class="bi bi-lock"></i> Bloqueia Horário
                    </label>
                    <select name="filtroBloqueiaHorario" class="form-select">
                        <option value="">Todos</option>
                        <option value="true" selected="@(ViewBag.FiltroBloqueiaHorario == true)">Sim</option>
                        <option value="false" selected="@(ViewBag.FiltroBloqueiaHorario == false)">Não</option>
                    </select>
                </div>
            </div>

            <div class="mt-3 d-flex gap-2">
                <button type="submit" class="btn-rir-primary">
                    <i class="bi bi-search"></i> Filtrar
                </button>
                <a asp-action="Index" class="btn-rir-secondary">
                    <i class="bi bi-x-circle"></i> Limpar Filtros
                </a>
            </div>
        </form>
    </div>
</div>

<!-- TABLE -->
<div class="card-rir">
    <div class="card-rir-body">
        @if (Model.Any())
        {
            <div class="table-responsive-rir">
                <table class="table-rir">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th class="d-none d-md-table-cell">Descrição</th>
                            <th class="d-none d-lg-table-cell">Criado em</th>
                            <th>Status</th>
                            <th class="text-end">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tipo in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@tipo.Nome</strong>
                                    <div class="d-md-none text-muted small mt-1">
                                        @(tipo.Descricao ?? "-")
                                    </div>
                                    <div class="d-lg-none text-muted small mt-1">
                                        <i class="bi bi-calendar"></i> @tipo.DataCriacao.ToString("dd/MM/yyyy")
                                    </div>
                                </td>
                                <td class="d-none d-md-table-cell">
                                    <span class="text-muted">@(tipo.Descricao ?? "-")</span>
                                </td>
                                <td class="d-none d-lg-table-cell">
                                    <span class="text-muted">
                                        <i class="bi bi-calendar"></i> @tipo.DataCriacao.ToString("dd/MM/yyyy")
                                    </span>
                                </td>
                                <td>
                                    @if (tipo.Ativo)
                                    {
                                        <span class="badge-rir badge-rir-success">
                                            <i class="bi bi-check-circle"></i> Ativo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge-rir badge-rir-danger">
                                            <i class="bi bi-x-circle"></i> Inativo
                                        </span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="table-actions">
                                        <a asp-action="Edit" asp-route-id="@tipo.Id"
                                           class="btn btn-sm btn-rir-primary"
                                           title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>

                                        @if (tipo.Ativo)
                                        {
                                            <button type="button"
                                                    class="btn btn-sm btn-rir-secondary"
                                                    onclick="confirmDelete(@tipo.Id, '@tipo.Nome.Replace("'", "\\'")')"
                                                    title="Desativar">
                                                <i class="bi bi-toggle-off"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="card-rir text-center">
                <div class="card-rir-body">
                    <div class="table-empty">
                        <i class="bi bi-inbox"></i>
                        <h4>Nenhum tipo cadastrado</h4>
                        <p class="text-muted">
                            Comece criando seu primeiro tipo de agendamento
                        </p>
                        <a asp-action="Create" class="btn btn-rir-primary mt-2">
                            <i class="bi bi-plus-circle"></i> Criar Primeiro Tipo
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- DELETE MODAL -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-exclamation-triangle"></i> Confirmar Desativação
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Deseja realmente desativar o tipo de agendamento <strong id="tipoNome"></strong>?</p>
                <div class="alert-rir alert-rir-info">
                    <i class="bi bi-info-circle"></i>
                    Este tipo não será mais exibido nas opções, mas agendamentos existentes não serão afetados.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-rir-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle"></i> Cancelar
                </button>
                <form id="deleteForm" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-rir-danger">
                        <i class="bi bi-toggle-off"></i> Desativar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id, nome) {
            document.getElementById('tipoNome').textContent = nome;
            document.getElementById('deleteForm').action = '/TiposAgendamento/Delete/' + id;
            const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }

        document.addEventListener('DOMContentLoaded', function () {
            const alerts = document.querySelectorAll('.alert-rir-success, .alert-rir-danger');
            alerts.forEach(function (alert) {
                setTimeout(function () {
                    alert.style.transition = 'opacity 0.5s';
                    alert.style.opacity = '0';
                    setTimeout(function () {
                        alert.remove();
                    }, 500);
                }, 5000);
            });
        });
    </script>
}
